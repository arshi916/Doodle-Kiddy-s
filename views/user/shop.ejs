    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Pagination state
        let currentPage = 1;
        const limit = 9;
        let totalPages = 1;

        // Selected filters
        let selectedCategories = [];
        let searchQuery = '';
        let sortOption = '';

        // Function to add item to cart with proper AJAX
        function addToCart(productId, productName, price, button, options = {}) {
            <% if (!locals.user) { %>
                Swal.fire({
                    icon: 'warning',
                    title: 'Login Required',
                    text: 'Please login to add items to cart',
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B49B',
                    timer: 3000
                }).then(() => {
                    window.location.href = '/login';
                });
                return;
            <% } %>

            if (!productId) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Invalid product ID',
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B49B'
                });
                return;
            }

            // Show loading state
            const originalText = button.innerHTML;
            button.innerHTML = '<div class="spinner"></div> Adding...';
            button.classList.add('loading');

            fetch('/api/add-to-cart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    productId: productId,
                    quantity: 1,
                    size: options.size,
                    color: options.color
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    button.innerHTML = '<i class="fas fa-check"></i> Added!';
                    button.style.background = 'linear-gradient(45deg, #4CAF50, #45a049)';
                    
                    setTimeout(() => {
                        button.innerHTML = originalText;
                        button.style.background = 'linear-gradient(#dec7aa, #e5c39f)';
                    }, 2000);

                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: `${productName} added to cart!`,
                        showConfirmButton: true,
                        confirmButtonColor: '#D4B49B',
                        timer: 3000
                    });
                    
                    if (window.updateCartCount) {
                        window.updateCartCount();
                    }
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: data.message || 'Failed to add to cart',
                        showConfirmButton: true,
                        confirmButtonColor: '#D4B49B'
                    });
                }
            })
            .catch(error => {
                console.error('Error adding to cart:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while adding to cart',
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B49B'
                });
            })
            .finally(() => {
                button.classList.remove('loading');
                if (button.innerHTML.includes('Adding...')) {
                    button.innerHTML = originalText;
                }
            });
        }

        // Toggle Wishlist function
        function toggleWishlist(button, productName) {
            event.preventDefault();
            event.stopPropagation();
            button.classList.toggle('active');
            const icon = button.querySelector('i');
            if (button.classList.contains('active')) {
                icon.classList.remove('far');
                icon.classList.add('fas');
                Swal.fire({
                    icon: 'success',
                    title: 'Added to Wishlist',
                    text: `Added ${productName} to wishlist`,
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B49B',
                    timer: 3000
                });
            } else {
                icon.classList.remove('fas');
                icon.classList.add('far');
                Swal.fire({
                    icon: 'success',
                    title: 'Removed from Wishlist',
                    text: `Removed ${productName} from wishlist`,
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B49B',
                    timer: 3000
                });
            }
        }

        // Open zoom function
        function openZoom(imageSrc) {
            event.preventDefault();
            event.stopPropagation();
            const modal = document.createElement('div');
            modal.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0,0,0,0.8);
                display: flex;
                justify-content: center;
                align-items: center;
                z-index: 1000;
                cursor: pointer;
            `;
            const img = document.createElement('img');
            img.src = imageSrc;
            img.style.cssText = `
                max-width: 90%;
                max-height: 90%;
                object-fit: contain;
                border-radius: 10px;
            `;
            modal.appendChild(img);
            document.body.appendChild(modal);
            modal.onclick = () => document.body.removeChild(modal);
        }

        // Price range slider
        const priceRange = document.getElementById('priceRange');
        const priceValue = document.getElementById('priceValue');
        priceRange.addEventListener('input', function() {
            priceValue.textContent = this.value;
            currentPage = 1;
            fetchProducts();
        });

        // Search input
        let searchInput = document.querySelector('.search-bar input');
        let searchButton = document.querySelector('.search-bar button');
        if (searchInput && searchButton) {
            searchInput.addEventListener('input', function() {
                searchQuery = this.value.trim();
                currentPage = 1;
                fetchProducts();
            });
            searchButton.addEventListener('click', function() {
                searchQuery = searchInput.value.trim();
                currentPage = 1;
                fetchProducts();
            });
        }

        // Fetch Categories
        async function fetchCategories() {
            try {
                const response = await fetch('/api/categories');
                const data = await response.json();
                if (data.success && data.categories && data.categories.length > 0) {
                    renderCategories(data.categories);
                } else {
                    console.error('No categories found:', data);
                    document.getElementById('categoryFilter').innerHTML += '<p>No categories available</p>';
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'No categories available',
                        showConfirmButton: true,
                        confirmButtonColor: '#D4B49B'
                    });
                }
            } catch (error) {
                console.error('Error fetching categories:', error);
                document.getElementById('categoryFilter').innerHTML += '<p>Error loading categories</p>';
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Error loading categories',
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B49B'
                });
            }
        }

        // Render Categories
        function renderCategories(categories) {
            const categoryFilter = document.getElementById('categoryFilter');
            categoryFilter.innerHTML = '<h3 class="filter-title">Filter by Category</h3>';
            categories.forEach(category => {
                const filterItem = document.createElement('div');
                filterItem.className = 'filter-item';
                filterItem.onclick = () => toggleFilter(category.name);
                filterItem.innerHTML = `
                    <div class="filter-checkbox" id="${category.name.replace(/ /g, '-')}-filter"></div>
                    <span>${category.name}</span>
                `;
                categoryFilter.appendChild(filterItem);
            });
        }

        // Toggle Filter function
        function toggleFilter(category) {
            const checkbox = document.getElementById(category.replace(/ /g, '-') + '-filter');
            checkbox.classList.toggle('checked');
            if (checkbox.classList.contains('checked')) {
                selectedCategories.push(category);
            } else {
                selectedCategories = selectedCategories.filter(c => c !== category);
            }
            currentPage = 1;
            fetchProducts();
        }

        // Filter by Category function
        function filterByCategory(category) {
            selectedCategories = [category];
            document.querySelectorAll('.filter-checkbox').forEach(checkbox => {
                checkbox.classList.toggle('checked', checkbox.id.replace('-filter', '').replace(/-/g, ' ') === category);
            });
            currentPage = 1;
            fetchProducts();
        }

        // Update Sort function
        function updateSort() {
            const sortSelect = document.getElementById('sortSelect');
            sortOption = sortSelect.value;
            currentPage = 1;
            fetchProducts();
        }

        // Reset Filters
        function resetFilters() {
            selectedCategories = [];
            searchQuery = '';
            sortOption = '';
            priceRange.value = 10000;
            priceValue.textContent = '10000';
            document.querySelectorAll('.filter-checkbox').forEach(checkbox => {
                checkbox.classList.remove('checked');
            });
            document.getElementById('sortSelect').value = '';
            if (searchInput) searchInput.value = '';
            currentPage = 1;
            fetchProducts();
            Swal.fire({
                icon: 'success',
                title: 'Filters Reset',
                text: 'All filters have been reset',
                showConfirmButton: true,
                confirmButtonColor: '#D4B49B',
                timer: 3000
            });
        }

        // Change Page function
        function changePage(page) {
            if (page >= 1 && page <= totalPages) {
                currentPage = page;
                fetchProducts();
            }
        }

        // Show Promo Modal
        function showPromoModal() {
            Swal.fire({
                icon: 'info',
                title: 'Special Offer',
                text: '40% off on new collection!',
                showConfirmButton: true,
                confirmButtonColor: '#D4B49B',
                timer: 3000
            });
        }

        // Show Error Message
        function showError(message) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: message,
                showConfirmButton: true,
                confirmButtonColor: '#D4B49B'
            });
        }

        // Fetch Products
        async function fetchProducts() {
            try {
                const priceValue = document.getElementById('priceRange').value;
                const params = new URLSearchParams();
                params.append('maxPrice', priceValue);
                params.append('page', currentPage);
                params.append('limit', limit);
                if (selectedCategories.length > 0) {
                    params.append('category', selectedCategories.join(','));
                }
                if (searchQuery) {
                    params.append('search', searchQuery);
                }
                if (sortOption) {
                    params.append('sort', sortOption);
                }

                const productsGrid = document.getElementById('productsGrid');
                productsGrid.innerHTML = '<div class="col-span-3 py-8 text-center"><div class="spinner"></div> Loading products...</div>';

                const response = await fetch(`/api/products?${params.toString()}`);
                const data = await response.json();

                if (data.success && data.products.length > 0) {
                    const totalProducts = data.totalProducts || data.products.length;
                    totalPages = Math.ceil(totalProducts / limit);
                    renderProducts(data.products);
                    document.getElementById('productCount').textContent = totalProducts;
                    document.getElementById('errorMessage').style.display = 'none';
                    updatePagination();
                } else {
                    let errorMsg = 'No products found matching your criteria';
                    if (searchQuery) {
                        errorMsg = `No products found for search: "${searchQuery}"`;
                    } else if (selectedCategories.length > 0) {
                        errorMsg = `No products found in category: ${selectedCategories.join(', ')}`;
                    }
                    productsGrid.innerHTML = `<div class="col-span-3 py-8 text-center">${errorMsg}</div>`;
                    document.getElementById('productCount').textContent = 0;
                    totalPages = 1;
                    updatePagination();
                    Swal.fire({
                        icon: 'info',
                        title: 'No Results',
                        text: errorMsg,
                        showConfirmButton: true,
                        confirmButtonColor: '#D4B49B'
                    });
                }
            } catch (error) {
                console.error('Error fetching products:', error);
                const errorMsg = 'Error loading products. Please try again.';
                document.getElementById('productsGrid').innerHTML = `<div class="col-span-3 py-8 text-center text-red-500">${errorMsg}</div>`;
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: errorMsg,
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B49B'
                });
            }
        }

        // Render Products
        function renderProducts(products) {
            const productsGrid = document.getElementById('productsGrid');
            productsGrid.innerHTML = '';

            if (!products || !Array.isArray(products)) {
                console.error('Invalid products data:', products);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Invalid product data received',
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B49B'
                });
                return;
            }

            products.forEach(product => {
                // Skip only if critical fields are missing
                if (!product._id || !product.productName) {
                    console.warn('Skipping invalid product (missing ID or name):', product);
                    return;
                }

                // Fallbacks for missing fields
                const categoryName = product.category?.name || 'Uncategorized';
                const imageSrc = product.productImage?.[0] ? `/images/${product.productImage[0]}` : '/images/placeholder.jpg';
                const finalPrice = product.finalPrice || product.salePrice || 0;
                const hasOptions = product.hasMultipleOptions || false;
                const isOutOfStock = product.quantity === 0;

                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.setAttribute('data-category', categoryName);
                productCard.setAttribute('data-price', finalPrice);

                const productLink = document.createElement('a');
                productLink.href = `/product/${product._id}`;
                productLink.style.textDecoration = 'none';

                const imageSection = document.createElement('div');
                imageSection.style.position = 'relative';

                const productImage = document.createElement('img');
                productImage.src = imageSrc;
                productImage.alt = product.productName;
                productImage.className = 'product-image';

                const priceBadge = document.createElement('div');
                priceBadge.className = 'price-badge';
                priceBadge.textContent = `₹${finalPrice}`;

                let discountBadge = '';
                if (product.discountPercent > 0) {
                    discountBadge = `<div class="discount-badge">-${product.discountPercent}%</div>`;
                }

                const productActions = document.createElement('div');
                productActions.className = 'product-actions';
                productActions.innerHTML = `
                    <button class="action-btn wishlist" onclick="event.preventDefault(); event.stopPropagation(); toggleWishlist(this, '${product.productName}')">
                        <i class="far fa-heart"></i>
                    </button>
                    <button class="action-btn" onclick="event.preventDefault(); event.stopPropagation(); openZoom('${imageSrc}')">
                        <i class="fas fa-search-plus"></i>
                    </button>
                `;

                imageSection.appendChild(productImage);
                imageSection.appendChild(priceBadge);
                if (discountBadge) imageSection.insertAdjacentHTML('beforeend', discountBadge);
                imageSection.appendChild(productActions);

                const productInfo = document.createElement('div');
                productInfo.className = 'product-info';
                productInfo.innerHTML = `
                    <h3 class="product-title">${product.productName}</h3>
                    <div class="product-price">
                        <span class="current-price">₹${finalPrice}</span>
                        ${product.originalPrice && product.originalPrice > finalPrice ? `<span class="old-price">₹${product.originalPrice}</span>` : ''}
                    </div>
                    <div class="product-rating">
                        <div class="stars">★★★★★</div>
                        <span style="color: #666; font-size: 0.8rem;">(24)</span>
                    </div>
                    <button class="add-to-cart" 
                            data-product-id="${product._id}" 
                            data-has-options="${hasOptions}"
                            onclick="event.preventDefault(); event.stopPropagation(); handleAddToCart(this, '${product.productName}', ${finalPrice})"
                            ${isOutOfStock ? 'disabled' : ''}>
                        ${isOutOfStock ? 'Out of Stock' : (hasOptions ? 'Choose options' : '<i class="fas fa-shopping-cart"></i> Add to Cart')}
                    </button>
                `;

                if (isOutOfStock) {
                    const outOfStockLabel = document.createElement('div');
                    outOfStockLabel.className = 'out-of-stock-label';
                    outOfStockLabel.textContent = 'Out of Stock';
                    outOfStockLabel.style.cssText = `
                        position: absolute;
                        top: 50%;
                        left: 50%;
                        transform: translate(-50%, -50%);
                        background: rgba(0, 0, 0, 0.7);
                        color: white;
                        padding: 0.5rem 1rem;
                        border-radius: 10px;
                        font-size: 1.2rem;
                        z-index: 1;
                    `;
                    imageSection.appendChild(outOfStockLabel);
                }

                productLink.appendChild(imageSection);
                productLink.appendChild(productInfo);
                productCard.appendChild(productLink);
                productsGrid.appendChild(productCard);
            });

            if (productsGrid.children.length === 0) {
                productsGrid.innerHTML = '<div class="col-span-3 py-8 text-center">No products to display</div>';
                Swal.fire({
                    icon: 'info',
                    title: 'No Products',
                    text: 'No valid products to display',
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B49B'
                });
            }
        }

        function handleAddToCart(button, productName, price) {
            const productId = button.dataset.productId;
            const hasOptions = button.dataset.hasOptions === 'true';

            if (hasOptions) {
                showOptionsModal(productId, productName, price);
            } else {
                addToCart(productId, productName, price, button);
            }
        }

        // Show options modal with error handling
        function showOptionsModal(productId, productName, price) {
            fetch(`/product/options/${productId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (!data.success) {
                        throw new Error(data.message || 'Failed to load options');
                    }
                    const modal = document.createElement('div');
                    modal.className = 'modal';
                    const sizes = data.sizes && Array.isArray(data.sizes) ? data.sizes : [];
                    const colors = data.colors && Array.isArray(data.colors) ? data.colors : [];
                    modal.innerHTML = `
                        <div class="modal-content">
                            <span class="close" onclick="this.parentElement.parentElement.style.display='none'">&times;</span>
                            <h3>Select Options for ${productName}</h3>
                            ${sizes.length > 0 ? `<select id="sizeSelect">${sizes.map(size => `<option value="${size}">${size}</option>`).join('')}</select>` : '<p>No sizes available</p>'}
                            ${colors.length > 0 ? `<select id="colorSelect">${colors.map(color => `<option value="${color}">${color}</option>`).join('')}</select>` : '<p>No colors available</p>'}
                            <button onclick="confirmSelection('${productId}', '${productName}', ${price})" ${sizes.length === 0 && colors.length === 0 ? 'disabled' : ''}>Add to Cart</button>
                        </div>
                    `;
                    document.body.appendChild(modal);
                    modal.style.display = 'block';
                })
                .catch(error => {
                    console.error('Error fetching options:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: error.message || 'Error loading options',
                        showConfirmButton: true,
                        confirmButtonColor: '#D4B49B'
                    });
                });
        }

        // Confirm selection and add to cart
        function confirmSelection(productId, productName, price) {
            const sizeId = document.getElementById('sizeSelect')?.value;
            const colorId = document.getElementById('colorSelect')?.value;
            const button = document.querySelector(`.add-to-cart[data-product-id="${productId}"]`);
            addToCart(productId, productName, price, button, { size: sizeId, color: colorId });
            document.querySelector('.modal').style.display = 'none';
        }

        // Update Pagination
        function updatePagination() {
            const prevButton = document.getElementById('prevPage');
            const nextButton = document.getElementById('nextPage');
            const paginationInfo = document.getElementById('paginationInfo');

            prevButton.disabled = currentPage === 1;
            nextButton.disabled = currentPage === totalPages;
            paginationInfo.textContent = `Page ${currentPage} of ${totalPages || 1}`;
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Server-side data
            const initialProducts = <%- JSON.stringify(products || []) %>;
            const initialTotalProducts = <%- totalProducts || 0 %>;
            const initialTotalPages = <%- totalPages || 1 %>;
            const initialPage = <%- currentPage || 1 %>;

            if (initialProducts && Array.isArray(initialProducts) && initialProducts.length > 0) {
                renderProducts(initialProducts);
                document.getElementById('productCount').textContent = initialTotalProducts;
                totalPages = initialTotalPages;
                currentPage = initialPage;
                updatePagination();
            } else {
                fetchProducts();
            }

            fetchCategories();
        });
    </script>
</body>
</html>