<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Verify OTP</title>
   
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;600;700&display=swap" rel="stylesheet"/>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Nunito Sans', sans-serif;
    }

    body {
      height: 100vh;
      background: linear-gradient(135deg, #f7f4ef 0%, #e8ddd4 100%);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .otp-container {
      background: #fff;
      padding: 40px 30px;
      border-radius: 16px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.1);
      text-align: center;
      max-width: 400px;
      width: 100%;
    }

    .otp-container h2 {
      background: linear-gradient(135deg, #dccdbd 0%, #dab17e 100%);
      background-clip: text;
      -webkit-text-fill-color: transparent;
      font-size: 24px;
      margin-bottom: 10px;
    }

    .otp-container p {
      font-size: 14px;
      color: #666;
      margin-bottom: 20px;
    }

    .otp-inputs {
      display: flex;
      justify-content: space-between;
      gap: 8px;
      margin-bottom: 20px;
    }

    .otp-inputs input {
      width: 45px;
      height: 55px;
      text-align: center;
      font-size: 22px;
      border: 2px solid #ddd;
      border-radius: 10px;
      transition: all 0.2s;
    }

    .otp-inputs input:focus {
      border-color: #dab17e;
      outline: none;
    }

    .submit-btn {
      background: linear-gradient(135deg, #dccdbd 0%, #dab17e 100%);
      color: white;
      padding: 12px;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      width: 100%;
      cursor: pointer;
      transition: 0.3s ease;
      margin-top: 10px;
    }

    .submit-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .timer-text {
      font-size: 13px;
      color: #444;
      margin-top: 10px;
    }

    .resend-link {
      display: none;
      margin-top: 10px;
    }

    .resend-link a {
      color: #dab17e;
      text-decoration: none;
      font-size: 14px;
      font-weight: bold;
    }

    .resend-link a:hover {
      text-decoration: underline;
    }

    .error-message {
      color: red;
      font-size: 13px;
      margin-bottom: 10px;
      display: none;
    }
  </style>
  
</head>
<body>

  <div class="otp-container">
    <h2>OTP Verification</h2>
    <p>Please enter the 6-digit code sent to your email</p>

    <% if (locals.message && message.length > 0) { %>
      <div class="error-message" style="display:block;"><%= message %></div>
    <% } %>

<form id="otpForm">


      <div class="otp-inputs">
        <input type="text" name="otp1" maxlength="1" required />
        <input type="text" name="otp2" maxlength="1" required />
        <input type="text" name="otp3" maxlength="1" required />
        <input type="text" name="otp4" maxlength="1" required />
        <input type="text" name="otp5" maxlength="1" required />
        <input type="text" name="otp6" maxlength="1" required />
      </div>
      <div class="error-message" id="otpError">Please enter all 6 digits</div>
      <button type="submit" class="submit-btn">Verify</button>
    </form>


    <div class="timer-text">
      Resend OTP in <span id="timer">60</span>s
    </div>

    <div class="resend-link" id="resendLink">
      <a href="/resend-otp">Resend OTP</a>
    </div>
  </div>

  <!-- Resend OTP handling using fetch -->
<!-- Resend OTP handling using fetch -->
<script>
  const inputs = document.querySelectorAll(".otp-inputs input");
  const form = document.getElementById("otpForm");
  const error = document.getElementById("otpError");
  const timerSpan = document.getElementById("timer");
  const resendLink = document.getElementById("resendLink");

  // Auto move to next input
  inputs.forEach((input, idx) => {
    input.addEventListener("input", () => {
      if (input.value && idx < inputs.length - 1) {
        inputs[idx + 1].focus();
      }
    });

    input.addEventListener("keydown", (e) => {
      if (e.key === "Backspace" && !input.value && idx > 0) {
        inputs[idx - 1].focus();
      }
    });
  });

  // Form validation
  form.addEventListener("submit", async (e) => {
    let otp = "";
    let valid = true;
    inputs.forEach((input) => {
      if (!input.value.trim()) valid = false;
      otp += input.value;
    });

    if (!valid) {
      e.preventDefault();
      error.style.display = "block";
      return;
    } else {
      error.style.display = "none";
      e.preventDefault();
// âœ… RIGHT
const response = await fetch("/verify-reset-otp", {
 
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ otp }),
      });

      const data = await response.json();
   if (data.success) {
  Swal.fire({
    icon: 'success',
    title: 'OTP Verified!',
    text: 'Redirecting to reset password...',
    timer: 2000,
    showConfirmButton: false
  }).then(() => {
    window.location.href = "/reset-password";
  });
} else {
  Swal.fire({
    icon: 'error',
    title: 'Invalid OTP',
    text: data.message
  });
}

    }
  });

  // Timer
  let timeLeft = 60;
  const countdown = setInterval(() => {
    timeLeft--;
    timerSpan.textContent = timeLeft;

    if (timeLeft <= 0) {
      clearInterval(countdown);
      timerSpan.textContent = "0";
      resendLink.style.display = "block";
    }
  }, 1000);

  // Resend OTP
  document.querySelector("#resendLink a").addEventListener("click", async (e) => {
    e.preventDefault();
   const res = await fetch("/resend-forgot-otp", { method: "POST" });

    const data = await res.json();

    if (data.success) {
      Swal.fire({
  icon: 'success',
  title: 'OTP Resent!',
  text: 'A new OTP has been sent to your email.',
  timer: 2000,
  showConfirmButton: false
});


      // Restart timer
      timeLeft = 60;
      resendLink.style.display = "none";
      timerSpan.textContent = timeLeft;

      inputs.forEach((input) => {
        input.disabled = false;
        input.value = "";
      });
      inputs[0].focus();
    } else {
      Swal.fire({
  icon: 'error',
  title: 'Oops!',
  text: data.message
});

    }
  });
</script>



</body>
</html>
