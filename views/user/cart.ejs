<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart - Kids Fashion Store</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <%- include("../../views/partials/user/header") %>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #f7f4ef 0%, #e8ddd4 100%);
            min-height: 100vh;
            padding: 20px 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Header */
        .cart-header {
            background: white;
            border-radius: 20px;
            padding: 30px 40px;
            margin-bottom: 30px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            position: relative;
            overflow: hidden;
        }

        .cart-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #D4B896, #C8A882);
        }

        .cart-title {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 10px;
        }

        .cart-title h1 {
            font-size: 2.5rem;
            color: #333;
            font-weight: 700;
        }

        .cart-title i {
            font-size: 2rem;
            color: #D4B896;
        }

        .cart-subtitle {
            color: #666;
            font-size: 1.1rem;
        }

        .breadcrumb {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-top: 15px;
            font-size: 0.9rem;
        }

        .breadcrumb a {
            color: #D4B896;
            text-decoration: none;
            font-weight: 600;
        }

        .breadcrumb a:hover {
            color: #C8A882;
        }

        .breadcrumb span {
            color: #999;
        }

        /* Main Content */
        .cart-layout {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }

        /* Cart Items */
        .cart-items {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        }

        .section-title {
            font-size: 1.5rem;
            color: #333;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .section-title i {
            color: #D4B896;
        }
        
        .cart-item {
            display: flex;
            gap: 20px;
            padding: 25px;
            border: 2px solid #f0f0f0;
            border-radius: 15px;
            margin-bottom: 20px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .cart-item:hover {
            border-color: #D4B896;
            box-shadow: 0 4px 15px rgba(212, 184, 150, 0.2);
            transform: translateY(-2px);
        }

        .item-image {
            width: 120px;
            height: 120px;
            border-radius: 12px;
            object-fit: cover;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .item-details {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        
        .item-description {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            line-height: 1.4;
            max-height: 2.8em;
        }
    
        .clickable-product {
            cursor: pointer;
            transition: all 0.3s ease;
        }
    
        .clickable-product:hover {
            transform: scale(1.02);
        }

        .item-info h3 {
            font-size: 1.2rem;
            color: #333;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .item-info p {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 4px;
        }

        .item-meta {
            display: flex;
            gap: 15px;
            margin-top: 10px;
        }

        .size-badge, .age-badge {
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .size-badge {
            background: rgba(212, 184, 150, 0.2);
            color: #D4B896;
        }

        .age-badge {
            background: rgba(52, 152, 219, 0.2);
            color: #3498db;
        }

        .color-badge {
            background: rgba(52, 152, 219, 0.2);
            color: #3498db;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .item-actions {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            justify-content: space-between;
            gap: 15px;
        }

        .item-price {
            font-size: 1.3rem;
            font-weight: 700;
            color: #333;
        }

        .quantity-controls {
            display: flex;
            align-items: center;
            gap: 8px;
            background: #f8f9fa;
            border-radius: 25px;
            padding: 5px;
        }

        .qty-btn {
            width: 30px;
            height: 30px;
            border: none;
            background: #D4B896;
            color: white;
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

        .qty-btn:hover {
            background: #C8A882;
            transform: scale(1.1);
        }

        .qty-display {
            width: 40px;
            text-align: center;
            font-weight: 600;
            color: #333;
        }

        .remove-btn {
            background: none;
            border: none;
            color: #e74c3c;
            cursor: pointer;
            padding: 8px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .remove-btn:hover {
            background: rgba(231, 76, 60, 0.1);
            transform: scale(1.1);
        }

        /* Order Summary */
        .order-summary {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            height: fit-content;
            position: sticky;
            top: 20px;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            font-size: 1rem;
        }

        .summary-row.total {
            font-size: 1.2rem;
            font-weight: 700;
            color: #333;
            padding-top: 15px;
            border-top: 2px solid #f0f0f0;
            margin-top: 20px;
        }

        .checkout-btn {
            width: 100%;
            padding: 18px;
            background: linear-gradient(135deg, #D4B896 0%, #C8A882 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 20px;
            position: relative;
            overflow: hidden;
        }

        .checkout-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(212, 184, 150, 0.4);
        }

        .checkout-btn i {
            margin-left: 8px;
        }

        /* Continue Shopping */
        .continue-shopping {
            text-align: center;
            margin-top: 20px;
        }

        .continue-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #D4B896;
            text-decoration: none;
            font-weight: 600;
            padding: 12px 20px;
            border: 2px solid #D4B896;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .continue-link:hover {
            background: #D4B896;
            color: white;
            transform: translateY(-2px);
        }

        /* Empty Cart */
        .empty-cart {
            text-align: center;
            padding: 80px 20px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        }

        .empty-cart i {
            font-size: 5rem;
            color: #ddd;
            margin-bottom: 25px;
        }

        .empty-cart h2 {
            font-size: 2rem;
            color: #333;
            margin-bottom: 15px;
        }

        .empty-cart p {
            color: #666;
            font-size: 1.1rem;
            margin-bottom: 30px;
        }

        .shop-now-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 15px 30px;
            background: linear-gradient(135deg, #D4B896 0%, #C8A882 100%);
            color: white;
            text-decoration: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

        .shop-now-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(212, 184, 150, 0.4);
        }

        /* Recommendations */
        .recommendations {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }

        .recommendation-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 25px;
        }

        .recommendation-item {
            border: 2px solid #f0f0f0;
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .recommendation-item:hover {
            border-color: #D4B896;
            box-shadow: 0 4px 15px rgba(212, 184, 150, 0.2);
            transform: translateY(-5px);
        }

        .recommendation-item img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .recommendation-item h4 {
            font-size: 1rem;
            color: #333;
            margin-bottom: 8px;
        }

        .recommendation-item p {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 10px;
        }

        .recommendation-price {
            font-size: 1.1rem;
            font-weight: 700;
            color: #D4B896;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .cart-layout {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .cart-header {
                padding: 25px 20px;
            }

            .cart-title h1 {
                font-size: 2rem;
            }

            .cart-items, .order-summary {
                padding: 25px 20px;
            }

            .cart-item {
                flex-direction: column;
                gap: 15px;
            }

            .item-image {
                width: 100%;
                height: 200px;
            }

            .item-actions {
                flex-direction: row;
                justify-content: space-between;
                align-items: center;
            }

            .recommendation-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .cart-item {
            animation: fadeIn 0.5s ease-in-out;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Cart Header -->
        <div class="cart-header">
            <div class="cart-title">
                <i class="fas fa-shopping-cart"></i>
                <h1>Shopping Cart</h1>
            </div>
            <p class="cart-subtitle">Review your items and proceed to checkout</p>
            <div class="breadcrumb">
                <a href="/">Home</a>
                <span>/</span>
                <a href="/shop">Shop</a>
                <span>/</span>
                <span>Shopping Cart</span>
            </div>
        </div>

        <!-- Main Content -->
        <div class="cart-layout">
            <!-- Cart Items -->
            <div class="cart-items">
                <div class="section-title">
                    <i class="fas fa-list"></i>
                    Cart Items (<span id="cart-item-count"><%= cart.items.length %></span>)
                </div>

                <% if (cart.items.length > 0) { %>
                    <div id="cart-items-container">
                        <% cart.items.forEach((item, index) => { %>
                            <% if (item.productId && !item.productId.isBlocked) { %>
                                <div class="cart-item" data-product-id="<%= item.productId._id %>">
                                    <% 
                                        let imageSrc = 'https://via.placeholder.com/200x200/f0f0f0/cccccc?text=No+Image';
                                        if (item.productId && item.productId.productImage) {
                                            if (Array.isArray(item.productId.productImage) && item.productId.productImage.length > 0) {
                                                imageSrc = item.productId.productImage[0];
                                            } else if (typeof item.productId.productImage === 'string' && item.productId.productImage.trim() !== '') {
                                                imageSrc = item.productId.productImage;
                                            }
                                        }
                                        if (imageSrc && !imageSrc.startsWith('http') && !imageSrc.startsWith('/')) {
                                            imageSrc = '/images/' + imageSrc;
                                        }
                                    %>
                                    <img src="<%= imageSrc %>" 
                                         alt="<%= item.productId ? item.productId.productName : 'Product' %>" 
                                         class="item-image clickable-product"
                                         style="width: 120px; height: 120px; object-fit: cover; background: #f0f0f0;"
                                         onerror="this.src='https://via.placeholder.com/200x200/f0f0f0/cccccc?text=Image+Not+Found'"
                                         onclick="goToProductDetail('<%= item.productId._id %>')">
                                    
                                    <div class="item-details">
                                        <div class="item-info">
                                            <h3 class="clickable-product" onclick="goToProductDetail('<%= item.productId._id %>')">
                                                <%= item.productId ? item.productId.productName : 'Unknown Product' %>
                                            </h3>
                                            <p class="item-description">
                                                <%= item.productId ? (item.productId.description || 'No description available') : 'Product not found' %>
                                            </p>
                                            <div class="item-meta">
                                                <span class="size-badge">Size: <%= item.selectedSize %></span>
                                                <span class="color-badge">Color: <%= item.selectedColor %></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="item-actions">
                                        <div class="item-price">₹<span class="item-total-price"><%= item.totalPrice.toFixed(2) %></span></div>
                                        <div class="quantity-controls">
                                            <button class="qty-btn" onclick="updateQuantity('<%= item.productId._id %>', -1)">-</button>
                                            <span class="qty-display" id="qty-<%= item.productId._id %>"><%= item.quantity %></span>
                                            <button class="qty-btn" onclick="updateQuantity('<%= item.productId._id %>', 1)">+</button>
                                        </div>
                                        <button class="remove-btn" onclick="removeItem('<%= item.productId._id %>')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            <% } else { %>
                                <script>
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Item Unavailable',
                                        text: 'The product "<%= item.productId ? item.productId.productName : 'Unknown Product' %>" has been removed from your cart as it is no longer available.',
                                        showConfirmButton: true,
                                        confirmButtonColor: '#D4B896',
                                        timer: 5000
                                    });
                                </script>
                            <% } %>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="empty-cart" id="empty-cart-message">
                        <i class="fas fa-shopping-cart"></i>
                        <h2>Your cart is empty</h2>
                        <p>Looks like you haven't added anything to your cart yet</p>
                        <a href="/shop" class="shop-now-btn">
                            <i class="fas fa-shopping-bag"></i>
                            Start Shopping
                        </a>
                    </div>
                <% } %>
            </div>

            <div class="order-summary" id="order-summary" <% if (cart.items.length === 0) { %>style="display: none;"<% } %>>
                <div class="section-title">
                    <i class="fas fa-receipt"></i>
                    Order Summary
                </div>

                <div class="summary-row">
                    <span>Subtotal (<span id="item-count"><%= cart.items.reduce((sum, item) => sum + item.quantity, 0) %></span> items)</span>
                    <span id="subtotal">₹<%= cart.items.reduce((sum, item) => sum + item.totalPrice, 0).toFixed(2) %></span>
                </div>
                <div class="summary-row">
                    <span>Shipping</span>
                    <span id="shipping">₹<%= cart.items.reduce((sum, item) => sum + item.totalPrice, 0) > 2500 ? '0.00' : '99.00' %></span>
                </div>
                <div class="summary-row">
                    <span>Tax</span>
                    <span id="tax">₹<%= (cart.items.reduce((sum, item) => sum + item.totalPrice, 0) * 0.18).toFixed(2) %></span>
                </div>

                <div class="summary-row total">
                    <span>Total</span>
                    <span id="total">₹<%= (cart.items.reduce((sum, item) => sum + item.totalPrice, 0) + (cart.items.reduce((sum, item) => sum + item.totalPrice, 0) > 2500 ? 0 : 99) + (cart.items.reduce((sum, item) => sum + item.totalPrice, 0) * 0.18)).toFixed(2) %></span>
                </div>

                <button class="checkout-btn" onclick="proceedToCheckout()">
                    Proceed to Checkout
                    <i class="fas fa-arrow-right"></i>
                </button>

                <div class="continue-shopping">
                    <a href="/shop" class="continue-link">
                        <i class="fas fa-arrow-left"></i>
                        Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    
        <!-- Recommendations -->
        <% if (recommendations && recommendations.length > 0) { %>
            <div class="recommendations">
                <div class="section-title">
                    <i class="fas fa-heart"></i>
                    You Might Also Like
                </div>
                <div class="recommendation-grid">
                    <% recommendations.forEach(product => { %>
                        <div class="recommendation-item" onclick="addToCart('<%= product._id %>', '<%= product.size && product.size.length > 0 ? product.size[0] : 'S' %>', '<%= product.color && product.color.length > 0 ? product.color[0] : 'white' %>')">
                            <img src="<%= product.productImage[0] ? (product.productImage[0].startsWith('http') ? product.productImage[0] : '/images/' + product.productImage[0]) : 'https://via.placeholder.com/200x150' %>" alt="<%= product.productName %>">
                            <h4><%= product.productName %></h4>
                            <p><%= product.description || 'No description available' %></p>
                            <div class="recommendation-price">₹<%= product.salePrice.toFixed(2) %></div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } %>
    </div>

    <%- include("../../views/partials/user/footer") %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function goToProductDetail(productId) {
            window.location.href = `/product/${productId}`;
        }

        function addToCart(productId, selectedSize, selectedColor) {
            console.log('addToCart called with:', { productId, selectedSize, selectedColor });
            if (!productId || !selectedSize || !selectedColor) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Selection',
                    text: 'Please select a product, size, and color',
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B896'
                });
                return;
            }

            fetch('/api/add-to-cart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    productId: productId,
                    quantity: 1,
                    selectedSize: selectedSize,
                    selectedColor: selectedColor
                })
            })
            .then(response => response.json())
            .then(data => {
                console.log('Server response:', data);
                if (data.success) {
                    updateCartCount();
                    updateCartSummary();
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: 'Product added to cart successfully',
                        showConfirmButton: true,
                        confirmButtonColor: '#D4B896',
                        timer: 3000
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: data.message || 'Failed to add to cart',
                        showConfirmButton: true,
                        confirmButtonColor: '#D4B896'
                    });
                }
            })
            .catch(error => {
                console.error('Error adding to cart:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Error adding to cart',
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B896'
                });
            });
        }

        function updateQuantity(productId, change) {
            const qtyDisplay = document.getElementById(`qty-${productId}`);
            let currentQty = parseInt(qtyDisplay.textContent);
            let newQty = currentQty + change;

            if (newQty < 1) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Invalid Quantity',
                    text: 'Quantity cannot be less than 1',
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B896'
                });
                return;
            }

            fetch('/api/update-cart-quantity', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ 
                    productId: productId, 
                    quantity: newQty 
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    qtyDisplay.textContent = newQty;
                    const itemTotalElement = document.querySelector(`[data-product-id="${productId}"] .item-total-price`);
                    if (itemTotalElement) {
                        itemTotalElement.textContent = data.itemTotal.toFixed(2);
                    }
                    updateCartSummary();
                    updateCartCount();
                  
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: data.message || 'Failed to update quantity',
                        showConfirmButton: true,
                        confirmButtonColor: '#D4B896'
                    });
                }
            })
            .catch(error => {
                console.error('Error updating quantity:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Error updating quantity',
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B896'
                });
            });
        }

        function removeItem(productId) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to remove this item from your cart?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#D4B896',
                cancelButtonColor: '#e74c3c',
                confirmButtonText: 'Yes, remove it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/api/remove-from-cart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId: productId })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            const cartItem = document.querySelector(`[data-product-id="${productId}"]`);
                            if (cartItem) {
                                cartItem.style.transform = 'translateX(-100%)';
                                cartItem.style.opacity = '0';
                                
                                setTimeout(() => {
                                    cartItem.remove();
                                    const remainingItems = document.querySelectorAll('.cart-item');
                                    if (remainingItems.length === 0) {
                                        showEmptyCart();
                                    }
                                    updateCartSummary();
                                    updateCartCount();
                                }, 300);
                            }
                            Swal.fire({
                                icon: 'success',
                                title: 'Removed',
                                text: 'Item removed from cart',
                                showConfirmButton: true,
                                confirmButtonColor: '#D4B896',
                                timer: 3000
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: data.message || 'Failed to remove item',
                                showConfirmButton: true,
                                confirmButtonColor: '#D4B896'
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error removing item:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Error removing item',
                            showConfirmButton: true,
                            confirmButtonColor: '#D4B896'
                        });
                    });
                }
            });
        }

        function updateCartSummary() {
            fetch('/api/cart-summary', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const summary = data.summary;
                    document.getElementById('subtotal').textContent = `₹${summary.subtotal.toFixed(2)}`;
                    document.getElementById('shipping').textContent = summary.shipping === 0 ? 'FREE' : `₹${summary.shipping.toFixed(2)}`;
                    document.getElementById('tax').textContent = `₹${summary.tax.toFixed(2)}`;
                    document.getElementById('total').textContent = `₹${summary.total.toFixed(2)}`;
                    document.getElementById('item-count').textContent = summary.itemCount;
                    document.getElementById('cart-item-count').textContent = document.querySelectorAll('.cart-item').length;
                    
                    const shippingElement = document.getElementById('shipping');
                    if (summary.shipping === 0) {
                        shippingElement.style.color = '#27ae60';
                        shippingElement.textContent = 'FREE';
                    } else {
                        shippingElement.style.color = '';
                    }
                }
            })
            .catch(error => {
                console.error('Error updating cart summary:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to update cart summary',
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B896'
                });
            });
        }

        function updateCartCount() {
            fetch('/api/cart-count', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const cartCountElements = document.querySelectorAll('.cart-count, [data-cart-count]');
                    cartCountElements.forEach(element => {
                        element.textContent = data.count || 0;
                    });
                    
                    const cartBadge = document.querySelector('.cart-badge');
                    if (cartBadge) {
                        cartBadge.textContent = data.count || 0;
                        cartBadge.style.display = data.count > 0 ? 'inline' : 'none';
                    }
                }
            })
            .catch(error => {
                console.error('Error updating cart count:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to update cart count',
                    showConfirmButton: true,
                    confirmButtonColor: '#D4B896'
                });
            });
        }

        function showEmptyCart() {
            const cartItemsContainer = document.getElementById('cart-items-container');
            const orderSummary = document.getElementById('order-summary');
            const emptyCartMessage = document.getElementById('empty-cart-message');
            
            if (cartItemsContainer) {
                cartItemsContainer.style.display = 'none';
            }
            
            if (orderSummary) {
                orderSummary.style.display = 'none';
            }
            
            if (!emptyCartMessage) {
                const cartItems = document.querySelector('.cart-items');
                cartItems.innerHTML = `
                    <div class="section-title">
                        <i class="fas fa-list"></i>
                        Cart Items (0)
                    </div>
                    <div class="empty-cart" id="empty-cart-message">
                        <i class="fas fa-shopping-cart"></i>
                        <h2>Your cart is empty</h2>
                        <p>Looks like you haven't added anything to your cart yet</p>
                        <a href="/shop" class="shop-now-btn">
                            <i class="fas fa-shopping-bag"></i>
                            Start Shopping
                        </a>
                    </div>
                `;
            }
        }

        function proceedToCheckout() {
            console.log("Redirecting to /user/checkout");
            window.location.href = '/checkout';
        }

        document.addEventListener('DOMContentLoaded', function() {
            updateCartCount();
            
            const elements = document.querySelectorAll('.cart-header, .cart-items, .order-summary');
            elements.forEach((element, index) => {
                element.style.opacity = '0';
                element.style.transform = 'translateY(30px)';
                setTimeout(() => {
                    element.style.transition = 'all 0.6s ease';
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }, index * 150);
            });
        });
    </script>
</body>
