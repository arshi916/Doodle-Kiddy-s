function validateForm() {
    let isValid = true;
    const currentMode = document.getElementById('new-address').classList.contains('show') ? 'new' : 'saved';
    
    if (currentMode === 'new') {
        const required = ['firstName', 'phone', 'address', 'city', 'state', 'zipCode', 'country'];
        
        required.forEach(field => {
            const input = document.getElementById(field);
            const error = document.getElementById(field + '-error');
            
            if (error && !input.value.trim()) {
                error.textContent = 'This field is required';
                error.style.display = 'block';
                isValid = false;
            } else if (error) {
                error.style.display = 'none';
            }
        });

        const phone = document.getElementById('phone');
        const phoneError = document.getElementById('phone-error');
        const phonePattern = /^\d{10}$/;
        
        if (phone.value && !phonePattern.test(phone.value.replace(/\D/g, ''))) {
            phoneError.textContent = 'Please enter a valid 10-digit phone number';
            phoneError.style.display = 'block';
            isValid = false;
        }

        const zipCode = document.getElementById('zipCode');
        const zipCodeError = document.getElementById('zipCode-error');
        
        if (zipCode.value && !/^\d{5,6}$/.test(zipCode.value)) {
            zipCodeError.textContent = 'Please enter a valid zip code';
            zipCodeError.style.display = 'block';
            isValid = false;
        }
    } else {
        const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked');
        if (!selectedAddress) {
            showAlert('error', 'Error', 'Please select an address');
            isValid = false;
        }
    }

    const selectedPayment = document.querySelector('input[name="paymentMethod"]:checked');
    if (!selectedPayment) {
        showAlert('error', 'Error', 'Please select a payment method');
        isValid = false;
    }

    if (selectedPayment && selectedPayment.value === 'card') {
        const cardFields = ['cardNumber', 'cardName', 'expiryDate', 'cvv'];
        
        cardFields.forEach(field => {
            const input = document.getElementById(field);
            const error = document.getElementById(field + '-error');
            
            if (!input.value.trim()) {
                error.textContent = 'This field is required for card payment';
                error.style.display = 'block';
                isValid = false;
            } else {
                error.style.display = 'none';
            }
        });

        const cardNumber = document.getElementById('cardNumber');
        const cardNumberError = document.getElementById('cardNumber-error');
        const cardDigits = cardNumber.value.replace(/\s/g, '');
        
        if (cardNumber.value && (cardDigits.length < 13 || cardDigits.length > 19 || !/^\d+$/.test(cardDigits))) {
            cardNumberError.textContent = 'Please enter a valid card number';
            cardNumberError.style.display = 'block';
            isValid = false;
        }

        const expiryDate = document.getElementById('expiryDate');
        const expiryError = document.getElementById('expiryDate-error');
        const expiryPattern = /^(0[1-9]|1[0-2])\/\d{2}$/;
        
        if (expiryDate.value && !expiryPattern.test(expiryDate.value)) {
            expiryError.textContent = 'Please enter date in MM/YY format';
            expiryError.style.display = 'block';
            isValid = false;
        }

        const cvv = document.getElementById('cvv');
        const cvvError = document.getElementById('cvv-error');
        
        if (cvv.value && (!/^\d{3,4}$/.test(cvv.value))) {
            cvvError.textContent = 'Please enter a valid CVV';
            cvvError.style.display = 'block';
            isValid = false;
        }
    }

    return isValid;
}

