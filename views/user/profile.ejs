// Start password OTP timer (updated to use correct timer elements)
function startPasswordOtpTimer(duration = 300) { // 5 minutes default
    const timerText = document.getElementById('passwordOtpTimerText');
    const resendBtn = document.getElementById('resendPasswordOtpBtn');
    
    let timeLeft = duration;
    
    if (passwordOtpTimer) {
        clearInterval(passwordOtpTimer);
    }
    
    timerText.style.display = 'block';
    resendBtn.style.display = 'none';
    
    function updateTimer() {
        const minutes = Math.floor(timeLeft / 60);
        const seconds = timeLeft % 60;
        timerText.textContent = `OTP expires in ${minutes}:${seconds.toString().padStart(2, '0')}`;
        
        if (timeLeft <= 0) {
            clearInterval(passwordOtpTimer);
            timerText.textContent = 'OTP expired';
            timerText.style.color = '#dc3545';
            resendBtn.style.display = 'block';
            return;
        }
        timeLeft--;
    }
    
    updateTimer();
    passwordOtpTimer = setInterval(updateTimer, 1000);
}
