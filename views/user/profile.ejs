// Password strength checker for the new form
function checkPasswordStrengthChange(password) {
    let strength = 0;
    let feedback = [];
    
    if (password.length >= 8) strength++;
    else feedback.push('at least 8 characters');
    
    if (/[a-z]/.test(password)) strength++;
    else feedback.push('lowercase letter');
    
    if (/[A-Z]/.test(password)) strength++;
    else feedback.push('uppercase letter');
    
    if (/[0-9]/.test(password)) strength++;
    else feedback.push('number');
    
    if (/[^A-Za-z0-9]/.test(password)) strength++;
    else feedback.push('special character');
    
    return { strength, feedback };
}

// Update password strength indicator for the new form
function updatePasswordStrengthChange() {
    const password = document.getElementById('newPasswordChange').value;
    const strengthBar = document.getElementById('strengthBarChange');
    const strengthText = document.getElementById('strengthTextChange');
    
    if (password.length === 0) {
        strengthBar.style.width = '0%';
        strengthText.textContent = '';
        return;
    }
    
    const result = checkPasswordStrengthChange(password);
    const percentage = (result.strength / 5) * 100;
    
    strengthBar.style.width = percentage + '%';
    
    if (result.strength <= 2) {
        strengthBar.style.background = '#dc3545';
        strengthText.textContent = 'Weak - Missing: ' + result.feedback.join(', ');
        strengthText.style.color = '#dc3545';
    } else if (result.strength <= 3) {
        strengthBar.style.background = '#ffc107';
        strengthText.textContent = 'Medium - Missing: ' + result.feedback.join(', ');
        strengthText.style.color = '#ffc107';
    } else if (result.strength <= 4) {
        strengthBar.style.background = '#28a745';
        strengthText.textContent = 'Good - Missing: ' + result.feedback.join(', ');
        strengthText.style.color = '#28a745';
    } else {
        strengthBar.style.background = '#28a745';
        strengthText.textContent = 'Excellent';
        strengthText.style.color = '#28a745';
    }
}

// Validate password match for new form
function validatePasswordMatchChange() {
    const newPassword = document.getElementById('newPasswordChange').value;
    const confirmPassword = document.getElementById('confirmPasswordChange').value;
    const confirmInput = document.getElementById('confirmPasswordChange');
    
    if (confirmPassword && newPassword !== confirmPassword) {
        confirmInput.setCustomValidity('Passwords do not match');
        confirmInput.classList.add('invalid');
        confirmInput.classList.remove('valid');
    } else if (confirmPassword) {
        confirmInput.setCustomValidity('');
        confirmInput.classList.remove('invalid');
        confirmInput.classList.add('valid');
    } else {
        confirmInput.setCustomValidity('');
        confirmInput.classList.remove('invalid', 'valid');
    }
}

