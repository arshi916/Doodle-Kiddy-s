        // OTP Timer functionality
        let otpTimer;

        function startOtpTimer(duration = 60) {
            const timerText = document.getElementById('timerText');
            const resendBtn = document.getElementById('resendOtpBtn');
            
            let timeLeft = duration;
            
            if (otpTimer) {
                clearInterval(otpTimer);
            }
            
            timerText.style.display = 'block';
            resendBtn.style.display = 'none';
            
            function updateTimer() {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                timerText.textContent = `Resend OTP in ${minutes}:${seconds.toString().padStart(2, '0')}`;
                
                if (timeLeft <= 0) {
                    clearInterval(otpTimer);
                    timerText.style.display = 'none';
                    resendBtn.style.display = 'block';
                    return;
                }
                timeLeft--;
            }
            
            updateTimer();
            otpTimer = setInterval(updateTimer, 1000);
        }

        // Send OTP
        document.getElementById('sendOtpBtn').addEventListener('click', function() {
            const newEmail = document.getElementById('newEmail').value.trim();
            if (!newEmail || !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(newEmail)) {
                showNotification('Please enter a valid email.', 'error');
                return;
            }

            this.disabled = true;
            this.textContent = 'Sending...';

            fetch('/profile/send-email-otp', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ newEmail })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    showNotification('OTP sent to new email.', 'success');
                    document.getElementById('otpSection').style.display = 'block';
                    document.getElementById('verifyOtpBtn').style.display = 'block';
                    this.style.display = 'none';
                    startOtpTimer(60);
                } else {
                    showNotification(data.message, 'error');
                }
            })
            .catch(err => showNotification('Error sending OTP.', 'error'))
            .finally(() => {
                this.disabled = false;
                this.textContent = 'Send OTP';
            });
        });

        // Verify OTP
        document.getElementById('verifyOtpBtn').addEventListener('click', function() {
            const newEmail = document.getElementById('newEmail').value.trim();
            const otp = document.getElementById('otp').value.trim();
            if (!otp || otp.length !== 6) {
                showNotification('Enter a valid 6-digit OTP.', 'error');
                return;
            }

            this.disabled = true;
            this.textContent = 'Verifying...';

            fetch('/profile/verify-email-otp', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ newEmail, otp })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    showNotification('Email updated successfully.', 'success');
                    document.getElementById('email').value = newEmail;
                    closeEmailEditModal();
                } else {
                    showNotification(data.message, 'error');
                }
            })
            .catch(err => showNotification('Error verifying OTP.', 'error'))
            .finally(() => {
                this.disabled = false;
                this.textContent = 'Verify OTP';
            });
        });

        // Resend OTP
        document.getElementById('resendOtpBtn').addEventListener('click', function() {
            const newEmail = document.getElementById('newEmail').value.trim();
            
            this.disabled = true;
            this.textContent = 'Sending...';

            fetch('/profile/resend-email-otp', {
                method: 'POST',
