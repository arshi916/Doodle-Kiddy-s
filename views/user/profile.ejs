    switch(status) {
        case 'Pending':
        case 'Processing':
            estimatedDays = 5;
            break;
        case 'Shipped':
        case 'Shipping':
            estimatedDays = 2;
            break;
        case 'Delivered':
        case 'Completed':
            return 'Delivered';
        default:
            estimatedDays = 5;
    }
    
