/* Enhanced Order Timeline CSS - Add this to your existing CSS */

.order-timeline {
    margin: 25px 0;
    position: relative;
}

.timeline-container {
    position: relative;
    padding-left: 30px;
}

.timeline-item {
    display: flex;
    align-items: flex-start;
    gap: 20px;
    padding: 15px 0;
    position: relative;
    border-left: 3px solid #e9ecef;
    margin-left: 15px;
    padding-left: 25px;
    transition: all 0.3s ease;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: -8px;
    top: 18px;
    width: 15px;
    height: 15px;
    border-radius: 50%;
    background: #e9ecef;
    border: 3px solid white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
}

.timeline-item.active {
    border-left-color: #D4B896;
}

.timeline-item.active::before {
    background: #D4B896;
    transform: scale(1.2);
}

.timeline-item.completed {
    border-left-color: #28a745;
}

.timeline-item.completed::before {
    background: #28a745;
    transform: scale(1.1);
}

.timeline-item.pending {
    border-left-color: #ffc107;
    opacity: 0.6;
}

.timeline-item.pending::before {
    background: #ffc107;
}

.timeline-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    color: white;
    flex-shrink: 0;
    margin-top: -3px;
}

.timeline-icon.completed {
    background: linear-gradient(135deg, #28a745, #20c997);
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
}

.timeline-icon.active {
    background: linear-gradient(135deg, #D4B896, #C8A882);
