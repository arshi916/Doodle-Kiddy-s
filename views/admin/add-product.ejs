  </aside>

  <!-- Main Content -->
  <div class="flex-1 flex flex-col">
    <!-- Header -->
    <header class="glass-effect shadow-lg border-b border-stone-300 px-6 py-4">
      <div class="flex justify-between items-center">
        <div class="flex items-center gap-4">
          <a href="/admin/products" class="inline-flex items-center text-stone-600 hover:text-stone-800 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Products
          </a>
          <div class="h-6 w-px bg-stone-300"></div>
          <h1 class="text-2xl font-bold text-gray-800">Add New Product</h1>
        </div>
      </div>
    </header>

    <main class="p-6 overflow-auto flex-1 custom-scrollbar">
      <div class="max-w-5xl mx-auto bg-white rounded-2xl shadow-xl border border-stone-300 hover-lift">
        <!-- Form Header -->
        <div class="bg-gradient-to-r from-stone-100 to-amber-50 rounded-t-2xl p-6 border-b border-stone-300">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-gradient-to-r from-stone-600 to-amber-800 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
              </svg>
            </div>
            <div>
              <h2 class="text-xl font-bold text-gray-800">Product Information</h2>
              <p class="text-sm text-gray-600">Create and configure your product listing</p>
            </div>
          </div>
        </div>

        <!-- Form Content -->
        <div class="p-8">
          <form id="productForm" onsubmit="return validateForm(event)">
            
            <!-- Image Upload Section -->
            <div class="mb-8">
              <div class="gradient-border">
                <div class="gradient-border-inner">
                  <div class="flex items-center gap-3 mb-4">
                    <div class="w-8 h-8 bg-gradient-to-r from-stone-600 to-amber-800 rounded-lg flex items-center justify-center">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 002 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="text-lg font-semibold text-gray-800">Product Images</h3>
                      <p class="text-sm text-gray-500">Upload 3-4 high-quality images (Required: minimum 3, maximum 4)</p>
                    </div>
                  </div>
                  
                  <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-4">
                    <div id="imageBox0" class="aspect-square border-2 border-dashed border-stone-300 flex items-center justify-center rounded-xl cursor-pointer bg-stone-50/50 hover:bg-stone-100/50 hover:border-stone-600 transition-all duration-300 relative group" onclick="triggerImageUpload(0)">
                      <span class="text-3xl text-stone-400 font-light group-hover:text-stone-600 transition-colors">+</span>
                      <img id="preview0" class="w-full h-full object-cover rounded-xl hidden" />
                      <button id="delete0" class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-7 h-7 text-sm hover:bg-red-600 transition-all duration-200 hover:scale-110 shadow-lg hidden" type="button" onclick="deleteImage(0, event)">×</button>
                    </div>
                    
                    <div id="imageBox1" class="aspect-square border-2 border-dashed border-stone-300 flex items-center justify-center rounded-xl cursor-pointer bg-stone-50/50 hover:bg-stone-100/50 hover:border-stone-600 transition-all duration-300 relative group" onclick="triggerImageUpload(1)">
                      <span class="text-3xl text-stone-400 font-light group-hover:text-stone-600 transition-colors">+</span>
                      <img id="preview1" class="w-full h-full object-cover rounded-xl hidden" />
                      <button id="delete1" class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-7 h-7 text-sm hover:bg-red-600 transition-all duration-200 hover:scale-110 shadow-lg hidden" type="button" onclick="deleteImage(1, event)">×</button>
                    </div>
                    
                    <div id="imageBox2" class="aspect-square border-2 border-dashed border-stone-300 flex items-center justify-center rounded-xl cursor-pointer bg-stone-50/50 hover:bg-stone-100/50 hover:border-stone-600 transition-all duration-300 relative group" onclick="triggerImageUpload(2)">
                      <span class="text-3xl text-stone-400 font-light group-hover:text-stone-600 transition-colors">+</span>
                      <img id="preview2" class="w-full h-full object-cover rounded-xl hidden" />
                      <button id="delete2" class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-7 h-7 text-sm hover:bg-red-600 transition-all duration-200 hover:scale-110 shadow-lg hidden" type="button" onclick="deleteImage(2, event)">×</button>
                    </div>
                    
                    <div id="imageBox3" class="aspect-square border-2 border-dashed border-stone-300 flex items-center justify-center rounded-xl cursor-pointer bg-stone-50/50 hover:bg-stone-100/50 hover:border-stone-600 transition-all duration-300 relative group" onclick="triggerImageUpload(3)">
                      <span class="text-3xl text-stone-400 font-light group-hover:text-stone-600 transition-colors">+</span>
                      <img id="preview3" class="w-full h-full object-cover rounded-xl hidden" />
                      <button id="delete3" class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-7 h-7 text-sm hover:bg-red-600 transition-all duration-200 hover:scale-110 shadow-lg hidden" type="button" onclick="deleteImage(3, event)">×</button>
                    </div>
                  </div>

                  <input type="file" id="imageInput0" name="productImage" accept="image/*" class="hidden" onchange="handleImageSelect(0)">
                  <input type="file" id="imageInput1" name="productImage" accept="image/*" class="hidden" onchange="handleImageSelect(1)">
                  <input type="file" id="imageInput2" name="productImage" accept="image/*" class="hidden" onchange="handleImageSelect(2)">
                  <input type="file" id="imageInput3" name="productImage" accept="image/*" class="hidden" onchange="handleImageSelect(3)">

                  <div id="imageError" class="text-red-500 text-sm mt-2 hidden flex items-center gap-2">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    <span></span>
                  </div>
                  <div id="imageCount" class="text-sm text-gray-600 mt-2">
                    Images uploaded: <span id="currentCount" class="font-medium text-stone-600">0</span>/4
                  </div>
                </div>
              </div>
            </div>

            <!-- Product Details -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
              <div class="floating-label">
                <input id="productName" name="productName" required class="w-full p-4 border-2 border-stone-200 rounded-xl focus:border-stone-600 focus:ring-4 focus:ring-stone-600/10 transition-all duration-300 placeholder-transparent bg-white" placeholder="Product Name" />
                <label class="font-medium">Product Name <span class="text-red-500">*</span></label>
                <div id="productNameError" class="text-red-500 text-sm mt-2 hidden flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                  <span></span>
                </div>
              </div>

              <div class="floating-label">
                <select id="category" name="category" required class="w-full p-4 border-2 border-stone-200 rounded-xl focus:border-stone-600 focus:ring-4 focus:ring-stone-600/10 transition-all duration-300 bg-white">
                  <option value="">Select Category</option>
                  <% if (categories && categories.length > 0) { %>
                    <% categories.forEach(category => { %>
                      <option value="<%= category._id %>"><%= category.name %></option>
                    <% }) %>
                  <% } else { %>
                    <option disabled>No categories available</option>
                  <% } %>
                </select>
                <label class="font-medium">Category <span class="text-red-500">*</span></label>
                <div id="categoryError" class="text-red-500 text-sm mt-2 hidden flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                  <span></span>
                </div>
              </div>
            </div>

            <!-- Color Selection -->
            <div class="mb-8">
              <div class="relative">
                <label class="block text-sm font-semibold text-gray-700 mb-3">Colors Available <span class="text-red-500">*</span></label>
                <button id="colorDropdownBtn" class="w-full flex justify-between items-center border-2 border-stone-200 p-4 rounded-xl cursor-pointer bg-white hover:border-stone-600 focus:border-stone-600 focus:ring-4 focus:ring-stone-600/10 transition-all duration-300" onclick="toggleDropdown()" type="button">
                  <span id="selectedColors" class="text-gray-600">Select Color(s)</span>
                  <svg class="w-5 h-5 ml-2 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" id="dropdownIcon">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
                  </svg>
                </button>

                <div id="colorDropdown" class="absolute z-20 mt-2 w-full bg-white border border-stone-200 rounded-xl shadow-xl hidden max-h-64 overflow-y-auto custom-scrollbar">
                  <div class="p-2">
                    <label class="flex items-center px-3 py-3 cursor-pointer hover:bg-stone-50 rounded-lg transition-colors">
                      <input type="checkbox" name="color" value="White" class="mr-3 w-4 h-4 text-stone-600 rounded focus:ring-stone-500">
                      <span class="flex items-center">
                        <span class="w-5 h-5 rounded-full bg-white border-2 border-gray-300 mr-3 shadow-sm"></span>
                        <span class="font-medium">White</span>
                      </span>
                    </label>
                    <label class="flex items-center px-3 py-3 cursor-pointer hover:bg-stone-50 rounded-lg transition-colors">
                      <input type="checkbox" name="color" value="Gray" class="mr-3 w-4 h-4 text-stone-600 rounded focus:ring-stone-500">
                      <span class="flex items-center">
                        <span class="w-5 h-5 rounded-full bg-gray-400 mr-3 shadow-sm"></span>
                        <span class="font-medium">Gray</span>
                      </span>
                    </label>
                    <label class="flex items-center px-3 py-3 cursor-pointer hover:bg-stone-50 rounded-lg transition-colors">
                      <input type="checkbox" name="color" value="Beige" class="mr-3 w-4 h-4 text-stone-600 rounded focus:ring-stone-500">
                      <span class="flex items-center">
                        <span class="w-5 h-5 rounded-full bg-yellow-100 mr-3 shadow-sm"></span>
                        <span class="font-medium">Beige</span>
                      </span>
                    </label>
                    <label class="flex items-center px-3 py-3 cursor-pointer hover:bg-stone-50 rounded-lg transition-colors">
                      <input type="checkbox" name="color" value="Yellow" class="mr-3 w-4 h-4 text-stone-600 rounded focus:ring-stone-500">
                      <span class="flex items-center">
                        <span class="w-5 h-5 rounded-full bg-yellow-400 mr-3 shadow-sm"></span>
                        <span class="font-medium">Yellow</span>
                      </span>
                    </label>
                    <label class="flex items-center px-3 py-3 cursor-pointer hover:bg-stone-50 rounded-lg transition-colors">
                      <input type="checkbox" name="color" value="Orange" class="mr-3 w-4 h-4 text-stone-600 rounded focus:ring-stone-500">
                      <span class="flex items-center">
                        <span class="w-5 h-5 rounded-full bg-orange-400 mr-3 shadow-sm"></span>
                        <span class="font-medium">Orange</span>
                      </span>
                    </label>
                    <label class="flex items-center px-3 py-3 cursor-pointer hover:bg-stone-50 rounded-lg transition-colors">
                      <input type="checkbox" name="color" value="Red" class="mr-3 w-4 h-4 text-stone-600 rounded focus:ring-stone-500">
                      <span class="flex items-center">
                        <span class="w-5 h-5 rounded-full bg-red-500 mr-3 shadow-sm"></span>
                        <span class="font-medium">Red</span>
                      </span>
                    </label>
                    <label class="flex items-center px-3 py-3 cursor-pointer hover:bg-stone-50 rounded-lg transition-colors">
                      <input type="checkbox" name="color" value="Purple" class="mr-3 w-4 h-4 text-stone-600 rounded focus:ring-stone-500">
