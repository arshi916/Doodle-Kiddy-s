<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin - Order Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    /* Perfect font size - this is the magic */
    html { font-size: 13.5px; }
    
    body { 
      font-family: 'Inter', sans-serif; 
      background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
    }
    
    .glass { 
      background: rgba(255, 255, 255, 0.95); 
      backdrop-filter: blur(12px); 
      border: 1px solid rgba(255, 255, 255, 0.3);
    }
    
    .hover-lift { 
      transition: all 0.3s ease; 
    }
    .hover-lift:hover { 
      transform: translateY(-4px); 
      box-shadow: 0 20px 40px rgba(0,0,0,0.1); 
    }
    
    .product-image {
      width: 68px;
      height: 68px;
      object-fit: cover;
      border-radius: 12px;
      border: 2px solid #e5e7eb;
    }
    
    .status-badge {
      @apply inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold;
    }
  </style>
</head>
<body class="min-h-screen">

<div class="flex h-screen">
  <!-- Sidebar -->
  <aside class="w-64 bg-white shadow-xl border-r border-gray-200">
    <div class="p-6 border-b border-gray-200">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-gradient-to-br from-amber-600 to-orange-700 rounded-xl flex items-center justify-center">
          <span class="text-white font-bold text-xl">A</span>
        </div>
        <h2 class="text-xl font-bold text-gray-800">AdminHub</h2>
      </div>
    </div>
    <nav class="p-4 space-y-2">
      <a href="/admin" class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-amber-50 rounded-xl transition">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M13 5v6h6"/></svg>
        Dashboard
      </a>
      <a href="/admin/orders" class="flex items-center gap-3 px-4 py-3 bg-gradient-to-r from-amber-100 to-orange-100 text-amber-900 rounded-xl font-semibold shadow-sm">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
        Orders
      </a>
      <a href="/admin/products" class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition">
        Products
      </a>
      <a href="/admin/customers" class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition">
        Customers
      </a>
    </nav>
  </aside>

  <!-- Main Content -->
  <div class="flex-1 flex flex-col">
    <header class="glass shadow-lg border-b border-gray-200 px-6 py-4">
      <div class="flex justify-between items-center">
        <div class="flex items-center gap-4">
          <a href="/admin/orders" class="text-gray-600 hover:text-gray-900">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
          </a>
          <h1 class="text-2xl font-bold text-gray-800">Order Details</h1>
          <span class="status-badge bg-amber-100 text-amber-800">#<%= order.orderId %></span>
        </div>
        <button onclick="printOrder()" class="px-5 py-2.5 bg-gradient-to-r from-amber-600 to-orange-700 text-white rounded-xl hover:shadow-lg transition font-medium text-sm">
          Print Order
        </button>
      </div>
    </header>

    <main class="flex-1 p-6 overflow-auto">
      <!-- Summary Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-5 mb-7">
        <div class="bg-white rounded-2xl shadow-lg p-5 hover-lift border border-gray-100">
          <div class="flex items-center gap-4">
            <div class="w-11 h-11 bg-blue-500 rounded-xl flex items-center justify-center text-white font-bold">ID</div>
            <div>
              <p class="text-gray-600 text-xs">Order ID</p>
              <p class="font-bold text-lg">#<%= order.orderId %></p>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-2xl shadow-lg p-5 hover-lift border border-gray-100">
          <div class="flex items-center gap-4">
            <div class="w-11 h-11 bg-green-500 rounded-xl flex items-center justify-center text-white text-xl">₹</div>
            <div>
              <p class="text-gray-600 text-xs">Total Amount</p>
              <p class="font-bold text-xl">₹<%= order.finalAmount %></p>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-2xl shadow-lg p-5 hover-lift border border-gray-100">
          <div class="flex items-center gap-4">
            <div class="w-11 h-11 bg-purple-500 rounded-xl flex items-center justify-center text-white font-bold text-sm">Items</div>
            <div>
              <p class="text-gray-600 text-xs">Items</p>
              <p class="font-bold text-xl"><%= order.orderedItemes?.length || 0 %></p>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-2xl shadow-lg p-5 hover-lift border border-gray-100">
          <div class="flex items-center gap-4">
            <div class="w-11 h-11 bg-amber-500 rounded-xl flex items-center justify-center text-white">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
            </div>
            <div>
              <p class="text-gray-600 text-xs">Order Date</p>
              <p class="font-bold text-lg"><%= order.formattedDate %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-7">
        <!-- LEFT: Order Items + Customer Info -->
        <div class="lg:col-span-2 space-y-7">

          <!-- Order Items -->
          <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-6 hover-lift">
            <h3 class="text-xl font-bold text-gray-800 mb-5">Order Items</h3>
            <div class="space-y-5">
              <% if (order.orderedItemes && order.orderedItemes.length > 0) { %>
                <% order.orderedItemes.forEach(item => { %>
                  <div class="flex gap-5 p-5 bg-gray-50 rounded-xl border border-gray-200">
                    <% const img = item.product?.productImage?.[0] ? `/images/${item.product.productImage[0]}` : '/images/placeholder.jpg'; %>
                    <img src="<%= img %>" alt="<%= item.product?.productName %>" class="product-image" onerror="this.src='/images/placeholder.jpg'">
                    <div class="flex-1">
                      <h4 class="font-bold text-gray-800 text-lg"><%= item.product?.productName || 'Unknown' %></h4>
                      <p class="text-gray-600 text-sm mt-1">
                        <% if (item.size) { %>Size: <%= item.size %><% } %>
                        <% if (item.product?.color?.[0]) { %><%= item.size ? ' • ' : '' %>Color: <%= item.product.color[0] %><% } %>
                      </p>
                      <div class="flex items-center gap-6 mt-3">
                        <span class="text-sm">Qty: <strong><%= item.quantity %></strong></span>
                        <span class="text-sm">₹<%= item.product?.salePrice || 0 %> each</span>
                        <span class="font-bold text-lg">₹<%= (item.product?.salePrice || 0) * item.quantity %></span>
                      </div>
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <p class="text-center text-gray-500 py-10">No items found</p>
              <% } %>
            </div>

            <div class="mt-6 pt-6 border-t-2 border-dashed border-gray-300">
              <div class="space-y-3 text-lg">
                <div class="flex justify-between"><span>Subtotal</span> <strong>₹<%= order.totalPrice || 0 %></strong></div>
                <% if (order.discount > 0) { %>
                  <div class="flex justify-between text-green-600"><span>Discount</span> <strong>-₹<%= order.discount %></strong></div>
                <% } %>
                <div class="flex justify-between text-2xl font-bold pt-4 border-t-2 border-gray-400">
                  <span>Total Amount</span>
                  <span class="text-3xl text-amber-700">₹<%= order.finalAmount %></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Customer Information -->
          <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-6 hover-lift">
            <div class="flex items-center justify-between mb-5">
              <h3 class="text-xl font-bold text-gray-800">Customer Information</h3>
              <div class="w-14 h-14 bg-gradient-to-br from-amber-500 to-orange-600 rounded-2xl flex items-center justify-center text-2xl font-bold text-white shadow-lg">
                <%= order.address?.name?.[0]?.toUpperCase() || 'U' %>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-5 text-sm">
              <div><strong>Name:</strong> <%= order.address?.name || 'N/A' %></div>
              <div><strong>Email:</strong> <%= order.address?.email || 'N/A' %></div>
              <div><strong>Phone:</strong> <%= order.address?.phone || 'N/A' %></div>
              <div><strong>User ID:</strong> #<%= order.address?._id?.toString().slice(-6).toUpperCase() || 'N/A' %></div>
            </div>
            <div class="mt-6 pt-6 border-t-2 border-dashed border-gray-300">
              <h4 class="font-bold mb-3">Shipping Address</h4>
              <div class="bg-gray-50 p-5 rounded-xl text-sm">
                <p class="font-semibold"><%= order.address?.name %></p>
                <p class="text-gray-700 mt-1"><%= order.address?.houseName %> <%= order.address?.streetAddress %></p>
                <p class="text-gray-700"><%= order.address?.city %>, <%= order.address?.state %> <%= order.address?.pincode %></p>
                <p class="text-gray-700 font-medium"><%= order.address?.country || 'India' %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- RIGHT: Status & Actions -->
        <div class="space-y-7">
          <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-6 hover-lift">
            <h3 class="text-xl font-bold text-gray-800 mb-5">Order Status</h3>
            
            <div class="mb-5">
              <span class="status-badge <%= order.status === 'Delivered' ? 'bg-green-100 text-green-800' : order.status === 'Return Request' ? 'bg-red-100 text-red-800' : 'bg-amber-100 text-amber-800' %>">
                <%= order.status %>
              </span>
            </div>

            <% 
  // Check if ANY item has status 'Return Request'
  const hasReturnRequest = order.orderedItemes.some(item => 
    (item.status || '').trim() === 'Return Request'
  );
%>

<% if (hasReturnRequest) { %>
  <div class="p-5 bg-red-50 border-2 border-red-200 rounded-xl mb-6">
    <p class="font-bold text-red-800 mb-4 text-sm">
      <i class="fas fa-exclamation-triangle mr-2"></i>
      Return Request Pending for Item(s)
    </p>
    
    <!-- Optional: Show which items -->
    <div class="mb-4 text-sm text-red-700">
      Items with return request:
      <ul class="list-disc list-inside ml-4 mt-2">
        <% order.orderedItemes.forEach(item => { %>
          <% if ((item.status || '').trim() === 'Return Request') { %>
            <li>
              <%= item.product?.productName || 'Product' %> 
              (Qty: <%= item.quantity %>)
              <% if (item.returnReason) { %> - Reason: <%= item.returnReason %><% } %>
            </li>
          <% } %>
        <% }) %>
      </ul>
    </div>

    <div class="grid grid-cols-2 gap-3">
      <button onclick="handleReturnRequest('<%= order._id %>', 'accept')" 
              class="py-3 bg-green-600 hover:bg-green-700 text-white rounded-xl font-semibold transition shadow-md text-sm">
        <i class="fas fa-check mr-2"></i> Accept Return
      </button>
      <button onclick="handleReturnRequest('<%= order._id %>', 'reject')" 
              class="py-3 bg-red-600 hover:bg-red-700 text-white rounded-xl font-semibold transition shadow-md text-sm">
        <i class="fas fa-times mr-2"></i> Reject Return
      </button>
    </div>
  </div>
<% } %>

            <select id="statusSelect" class="w-full p-3 border border-gray-300 rounded-xl text-sm mb-4">
              <% ['Pending','Processing','Shipping','Delivered','Return Request','Returned','Cancelled'].forEach(s => { %>
                <option value="<%= s %>" <%= order.status === s ? 'selected' : '' %>><%= s %></option>
              <% }) %>
            </select>
            
            <button onclick="updateOrderStatus()" class="w-full py-3 bg-gradient-to-r from-amber-600 to-orange-700 text-white rounded-xl font-bold hover:shadow-xl transition text-sm">
              Update Status
            </button>
          </div>

          <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-6 hover-lift">
            <h3 class="text-xl font-bold text-gray-800 mb-5">Payment</h3>
            <div class="space-y-3 text-sm">
              <div class="flex justify-between"><span>Method:</span> <strong><%= order.paymentMethod || 'N/A' %></strong></div>
              <div class="flex justify-between"><span>Status:</span> <span class="text-green-600 font-bold">Paid</span></div>
              <div class="flex justify-between"><span>Date:</span> <strong><%= order.formattedDate %></strong></div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<!-- SINGLE WORKING SCRIPT -->
<script>
  async function handleReturnRequest(orderId, action) {
    // Remove the line outside — pass orderId as parameter

    const result = await Swal.fire({
      title: action === 'accept' ? 'Accept Return Request?' : 'Reject Return Request?',
      text: action === 'accept' 
        ? 'The item(s) will be marked as returned and stock will be restored.' 
        : 'The return request will be rejected and order stays Delivered.',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: action === 'accept' ? '#10b981' : '#ef4444',
      cancelButtonColor: '#6b7280',
      confirmButtonText: 'Yes, ' + (action === 'accept' ? 'Accept' : 'Reject'),
      cancelButtonText: 'Cancel'
    });

    if (!result.isConfirmed) return;

    // Get the button that was clicked
    const btn = event.target.closest('button');
    const original = btn.innerHTML;
    btn.disabled = true;
    btn.innerHTML = '<svg class="animate-spin h-5 w-5 mx-auto" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none" class="opacity-25"></circle><path fill="currentColor" d="M4 12a8 8 0 018-8v4h-4a4 4 0 00-4 4h4z" class="opacity-75"></path></svg>';

    try {
      const res = await fetch('/admin/orders/handle-return', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ orderId, action })
      });
      const data = await res.json();

      if (data.success) {
        Swal.fire({
          icon: 'success',
          title: 'Success!',
          text: data.message || `Return request ${action}ed successfully.`,
          timer: 2000,
          showConfirmButton: false
        }).then(() => location.reload());
      } else {
        throw new Error(data.message || 'Operation failed');
      }
    } catch (err) {
      console.error('Error:', err);
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: err.message || 'Something went wrong. Please try again.'
      });
      btn.innerHTML = original;
      btn.disabled = false;
    }
  }

  async function updateOrderStatus() {
    const status = document.getElementById('statusSelect').value;
    const orderId = '<%= order._id %>';

    const btn = event.target;
    const original = btn.innerHTML;
    btn.disabled = true;
    btn.innerHTML = 'Updating...';

    try {
      const res = await fetch('/admin/orders/update-status', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ orderId, status })
      });
      const data = await res.json();
      if (data.success) {
        Swal.fire('Updated!', data.message, 'success').then(() => location.reload());
      } else throw new Error(data.message);
    } catch (err) {
      Swal.fire('Error', err.message, 'error');
      btn.innerHTML = original;
      btn.disabled = false;
    }
  }

  function printOrder() { window.print(); }
</script>
</body>
</html>