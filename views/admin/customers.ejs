<!-- Enhanced Confirmation Modal & JavaScript -->
<script>
// SweetAlert2 configuration
const Toast = Swal.mixin({
  toast: true,
  position: 'top-end',
  showConfirmButton: false,
  timer: 3000,
  timerProgressBar: true,
  didOpen: (toast) => {
    toast.addEventListener('mouseenter', Swal.stopTimer)
    toast.addEventListener('mouseleave', Swal.resumeTimer)
  }
});

// Show success message using SweetAlert2
function showSuccessMessage(message, isBlocked) {
  Toast.fire({
    icon: 'success',
    title: message,
    background: isBlocked ? '#fee2e2' : '#d1fae5',
    iconColor: isBlocked ? '#dc2626' : '#10b981',
  });
}

// Show confirmation modal using SweetAlert2
function showConfirmModal(message, customerName, onConfirm, isCurrentlyBlocked) {
  Swal.fire({
    title: 'Confirm Action',
    html: `
      <p class="text-gray-600 mb-2">${message}</p>
      ${customerName ? `<p class="text-gray-800 font-medium bg-stone-100 px-3 py-2 rounded-lg mt-3">${customerName}</p>` : ''}
    `,
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: isCurrentlyBlocked ? '#10b981' : '#dc2626',
    cancelButtonColor: '#6b7280',
    confirmButtonText: isCurrentlyBlocked ? 'Yes, Unblock!' : 'Yes, Block!',
    cancelButtonText: 'Cancel',
    reverseButtons: true,
    customClass: {
      popup: 'rounded-2xl',
      confirmButton: 'px-5 py-2 rounded-lg font-medium',
      cancelButton: 'px-5 py-2 rounded-lg font-medium'
    }
  }).then((result) => {
    if (result.isConfirmed) {
      onConfirm();
    }
  });
}

// Handle toggle block/unblock
async function handleToggleBlock(userId, isCurrentlyBlocked, customerName) {
  const action = isCurrentlyBlocked ? 'Unblock' : 'Block';
  const message = `Are you sure you want to ${action.toLowerCase()} this customer?`;
  
  showConfirmModal(message, customerName, async () => {
    try {
      // Show loading
      Swal.fire({
        title: 'Processing...',
        html: 'Please wait while we update the customer status',
        allowOutsideClick: false,
        allowEscapeKey: false,
        didOpen: () => {
          Swal.showLoading();
        }
      });
      
      const response = await fetch('/admin/users/toggle-block', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ userId: userId })
      });
      
      const data = await response.json();
      
      if (data.success) {
        // Update UI immediately
        const row = document.querySelector(`tr[data-user-id="${userId}"]`);
        const statusBadge = row.querySelector('.status-badge-cell');
        const statusDot = row.querySelector('.status-dot');
        const statusText = row.querySelector('.status-text');
        const statusIndicator = row.querySelector('.status-indicator');
        const actionButton = row.querySelector('.action-button');
        
        if (data.isBlocked) {
          // Now blocked
          statusBadge.className = 'inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800 status-badge-cell';
          statusDot.className = 'w-2 h-2 bg-red-500 rounded-full mr-2 status-dot';
          statusText.textContent = 'Blocked';
          statusIndicator.className = 'absolute -top-1 -right-1 w-4 h-4 bg-red-500 rounded-full border-2 border-white status-indicator';
          
          actionButton.className = 'inline-flex items-center p-2 text-green-600 hover:text-green-700 hover:bg-green-50 rounded-lg transition-all duration-200 action-button';
          actionButton.title = 'Unblock Customer';
          actionButton.innerHTML = `
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
            </svg>
          `;
          actionButton.onclick = () => handleToggleBlock(userId, true, customerName);
        } else {
          // Now active
          statusBadge.className = 'inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 status-badge-cell';
          statusDot.className = 'w-2 h-2 bg-green-500 rounded-full mr-2 status-dot';
          statusText.textContent = 'Active';
          statusIndicator.className = 'absolute -top-1 -right-1 w-4 h-4 bg-green-500 rounded-full border-2 border-white status-indicator';
          
          actionButton.className = 'inline-flex items-center p-2 text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg transition-all duration-200 action-button';
          actionButton.title = 'Block Customer';
          actionButton.innerHTML = `
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          `;
          actionButton.onclick = () => handleToggleBlock(userId, false, customerName);
        }
        
        actionButton.disabled = false;
        
        // Close loading and show success message
        Swal.close();
        showSuccessMessage(data.message, data.isBlocked);
      } else {
        // Error handling
        Swal.fire({
          icon: 'error',
          title: 'Error!',
          text: data.message || 'An error occurred',
          confirmButtonColor: '#dc2626',
          customClass: {
            popup: 'rounded-2xl'
          }
        });
      }
    } catch (error) {
      console.error('Error:', error);
      Swal.fire({
        icon: 'error',
        title: 'Connection Error!',
        text: 'Failed to update customer status. Please try again.',
        confirmButtonColor: '#dc2626',
        customClass: {
          popup: 'rounded-2xl'
        }
      }).then(() => {
        location.reload(); // Reload to ensure consistency
      });
    }
  }, isCurrentlyBlocked);
}

