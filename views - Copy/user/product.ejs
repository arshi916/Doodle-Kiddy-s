        let scale = 1;
        let initialDistance = 0;
        let translateX = 0;
        let translateY = 0;

        const zoomedImage = document.getElementById('zoomedImage');
        zoomedImage.addEventListener('touchstart', function(e) {
            if (e.touches.length === 2) {
                e.preventDefault();
                const touch1 = e.touches[0];
                const touch2 = e.touches[1];
                initialDistance = Math.hypot(touch2.pageX - touch1.pageX, touch2.pageY - touch1.pageY);
            } else if (e.touches.length === 1 && scale > 1) {
                e.preventDefault();
                this.dataset.startX = e.touches[0].pageX - translateX;
                this.dataset.startY = e.touches[0].pageY - translateY;
            }
        });

        zoomedImage.addEventListener('touchmove', function(e) {
            if (e.touches.length === 2) {
                e.preventDefault();
                const touch1 = e.touches[0];
                const touch2 = e.touches[1];
                const currentDistance = Math.hypot(touch2.pageX - touch1.pageX, touch2.pageY - touch1.pageY);
                scale = Math.max(1, Math.min((currentDistance / initialDistance) * 1.5, 4));
                this.style.transform = `scale(${scale}) translate(${translateX / scale}px, ${translateY / scale}px)`;
            } else if (e.touches.length === 1 && scale > 1) {
                e.preventDefault();
                translateX = e.touches[0].pageX - parseFloat(this.dataset.startX || 0);
                translateY = e.touches[0].pageY - parseFloat(this.dataset.startY || 0);
                const maxTranslate = (this.offsetWidth * (scale - 1)) / (2 * scale);
                translateX = Math.max(-maxTranslate, Math.min(maxTranslate, translateX));
                translateY = Math.max(-maxTranslate, Math.min(maxTranslate, translateY));
                this.style.transform = `scale(${scale}) translate(${translateX / scale}px, ${translateY / scale}px)`;
            }
        });

        zoomedImage.addEventListener('touchend', function() {
            if (scale === 1) {
                translateX = 0;
                translateY = 0;
                this.style.transform = 'scale(1)';
