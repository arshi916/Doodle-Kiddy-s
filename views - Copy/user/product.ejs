    <script>
        // FIXED: Initialize selected values
        let selectedSize = '<%= product.size && product.size.length > 0 ? product.size[0] : "" %>';
        let selectedColor = '<%= product.color && product.color.length > 0 ? product.color[0] : "" %>';

        console.log('Initial selections:', { selectedSize, selectedColor });

        // Function to show notifications
        function showNotification(message, type = 'success') {
            const existingNotifications = document.querySelectorAll('.notification');
            existingNotifications.forEach(notif => notif.remove());

            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            
            const icon = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-triangle';
            notification.innerHTML = `
                <i class="${icon}"></i>
                <span>${message}</span>
            `;

            document.body.appendChild(notification);

            setTimeout(() => {
                notification.classList.add('show');
            }, 100);

            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 300);
            }, 4000);
        }

        function addToCart() {
            <% if (!locals.user) { %>
                showNotification('Please login to add items to cart', 'error');
                setTimeout(() => {
                    window.location.href = '/login';
                }, 1500);
                return;
            <% } %>

            const quantity = document.getElementById('quantity').value;
            
            console.log('Adding to cart with:', {
                productId: '<%= product._id %>',
                quantity: quantity,
                selectedColor: selectedColor,
                selectedSize: selectedSize
            });
            
            const button = event.target;
            const originalText = button.innerHTML;
            
            button.innerHTML = '<div class="spinner"></div> Adding...';
            button.classList.add('loading');

            fetch('/api/add-to-cart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    productId: '<%= product._id %>',
                    quantity: parseInt(quantity),
                    selectedColor: selectedColor,
                    selectedSize: selectedSize
                })
            })
            .then(response => response.json())
            .then(data => {
                console.log('Server response:', data);
                if (data.success) {
                    button.innerHTML = '<i class="fas fa-check"></i> Added!';
                    button.classList.remove('bg-gray-900', 'hover:bg-yellow-400', 'hover:text-gray-900');
                    button.classList.add('bg-green-500');
                    
                    setTimeout(() => {
                        button.innerHTML = originalText;
                        button.classList.remove('bg-green-500');
                        button.classList.add('bg-gray-900', 'hover:bg-yellow-400', 'hover:text-gray-900');
                    }, 2000);

                    showNotification(`<%= product.productName %> added to cart!`, 'success');
                    
                    if (window.updateCartCount) {
                        window.updateCartCount();
                    }
                } else {
                    showNotification(data.message || 'Failed to add to cart', 'error');
                }
            })
            .catch(error => {
                console.error('Error adding to cart:', error);
                showNotification('An error occurred while adding to cart', 'error');
            })
            .finally(() => {
                button.classList.remove('loading');
                if (button.innerHTML.includes('Adding...')) {
                    button.innerHTML = originalText;
                }
            });
        }

        function addToCartRelated(productId, productName, price, button) {
            <% if (!locals.user) { %>
                showNotification('Please login to add items to cart', 'error');
                setTimeout(() => {
                    window.location.href = '/login';
                }, 1500);
                return;
            <% } %>

            const originalText = button.innerHTML;
            button.innerHTML = '<div class="spinner"></div> Adding...';
            button.disabled = true;

            fetch('/api/add-to-cart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    productId: productId,
                    quantity: 1,
                    selectedColor: '', // Related products will use default values
                    selectedSize: ''
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    button.innerHTML = '<i class="fas fa-check"></i> Added!';
                    button.style.borderColor = '#4CAF50';
                    button.style.color = '#4CAF50';
                    
                    setTimeout(() => {
                        button.innerHTML = originalText;
                        button.style.borderColor = '#d1d5db';
                        button.style.color = '#6b7280';
                    }, 2000);

                    showNotification(`${productName} added to cart!`, 'success');
                    
                    if (window.updateCartCount) {
                        window.updateCartCount();
                    }
                } else {
                    showNotification(data.message || 'Failed to add to cart', 'error');
                }
            })
            .catch(error => {
                console.error('Error adding to cart:', error);
                showNotification('An error occurred while adding to cart', 'error');
            })
            .finally(() => {
                button.disabled = false;
                if (button.innerHTML.includes('Adding...')) {
                    button.innerHTML = originalText;
                }
            });
        }

        function selectColor(element, color) {
            selectedColor = color;
            console.log('Selected color:', selectedColor);
            
            document.querySelectorAll('.color-option').forEach(el => {
                el.classList.remove('selected');
            });
            
            element.classList.add('selected');
            
            // Update color text display
            const colorText = document.getElementById('selectedColorText');
            if (colorText) {
                colorText.textContent = `(${color})`;
            }
        }

        function selectSize(button, size) {
            selectedSize = size;
            console.log('Selected size:', selectedSize);
            
            document.querySelectorAll('.size-option').forEach(btn => {
                btn.classList.remove('selected');
            });
            button.classList.add('selected');
        }

        function toggleWishlist(button, productName) {
            button.classList.toggle('active');
            const icon = button.querySelector('i');
            if (button.classList.contains('active')) {
                icon.classList.remove('far');
                icon.classList.add('fas');
                showNotification(`Added ${productName} to wishlist`, 'success');
            } else {
                icon.classList.remove('fas');
                icon.classList.add('far');
                showNotification(`Removed ${productName} from wishlist`, 'success');
            }
        }

        function changeMainImage(src) {
            const mainImage = document.getElementById('mainImage');
            const zoomedImageResult = document.getElementById('zoomedImageResult');
            mainImage.src = src;
            zoomedImageResult.src = src;
            mainImage.classList.add('opacity-0');
            setTimeout(() => mainImage.classList.remove('opacity-0'), 300);
        }

        function openZoom(src) {
            document.getElementById('zoomedImage').src = src;
            document.getElementById('zoomModal').classList.remove('hidden');
        }

        function closeZoom() {
            document.getElementById('zoomModal').classList.add('hidden');
            document.getElementById('zoomedImage').style.transform = 'scale(1)';
        }

        document.getElementById('zoomModal').addEventListener('click', function(event) {
            if (event.target === this || event.target.classList.contains('zoom-image')) {
                closeZoom();
            }
        });

        function showTab(tabId) {
            document.querySelectorAll('.tab-content').forEach(tab => tab.classList.add('hidden'));
            document.getElementById(tabId).classList.remove('hidden');
            document.querySelectorAll('nav button').forEach(btn => {
                btn.classList.remove('border-yellow-400', 'text-yellow-400');
                btn.classList.add('text-gray-400', 'hover:text-yellow-400');
            });
            document.querySelector(`button[onclick="showTab('${tabId}')"]`).classList.add('border-yellow-400', 'text-yellow-400');
        }

        // Zoom functionality for desktop
        const mainImage = document.getElementById('mainImage');
        const zoomLens = document.querySelector('.zoom-lens');
        const zoomResult = document.getElementById('zoomResult');
        const zoomedImageResult = document.getElementById('zoomedImageResult');
        const zoomContainer = document.querySelector('.zoom-container');
        const zoomLevel = 3;

        zoomContainer.addEventListener('mouseenter', () => {
            if (window.innerWidth > 1024) {
                zoomResult.style.display = 'block';
            }
        });

        zoomContainer.addEventListener('mouseleave', () => {
            zoomResult.style.display = 'none';
        });

        zoomContainer.addEventListener('mousemove', (e) => {
            if (window.innerWidth <= 1024) return;

            const rect = mainImage.getBoundingClientRect();
            const resultWidth = zoomResult.offsetWidth;
            const resultHeight = zoomResult.offsetHeight;

            let x = e.clientX - rect.left;
            let y = e.clientY - rect.top;

            x = Math.max(0, Math.min(x, rect.width));
            y = Math.max(0, Math.min(y, rect.height));

            const scrollX = window.scrollX || window.pageXOffset;
            const scrollY = window.scrollY || window.pageYOffset;
            zoomResult.style.left = `${e.clientX + scrollX + 10}px`;
            zoomResult.style.top = `${e.clientY + scrollY - resultHeight / 2}px`;

