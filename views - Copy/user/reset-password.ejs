<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Set New Password</title>
  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;600;700&display=swap" rel="stylesheet"/>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Nunito Sans', sans-serif;
    }

    body {
      height: 100vh;
      background: linear-gradient(135deg, #f7f4ef 0%, #e8ddd4 100%);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .reset-container {
      background: #fff;
      padding: 40px 30px;
      border-radius: 16px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.1);
      text-align: center;
      width: 100%;
      max-width: 400px;
    }

    .reset-container h2 {
      background: linear-gradient(135deg, #dccdbd 0%, #dab17e 100%);
      background-clip: text;
      -webkit-text-fill-color: transparent;
      font-size: 24px;
      margin-bottom: 20px;
    }

    .reset-container input {
      width: 100%;
      padding: 12px;
      margin-bottom: 5px;
      border-radius: 10px;
      border: 2px solid #ddd;
      font-size: 16px;
    }

    .reset-container input:focus {
      border-color: #dab17e;
      outline: none;
    }

    .submit-btn {
      background: linear-gradient(135deg, #dccdbd 0%, #dab17e 100%);
      color: white;
      padding: 12px;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      width: 100%;
      cursor: pointer;
      transition: 0.3s ease;
      margin-top: 10px;
    }

    .submit-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .error-message {
      color: red;
      font-size: 13px;
      margin-bottom: 10px;
      display: none;
      text-align: left;
    }

    .server-error {
      display: block;
      text-align: center;
      margin-bottom: 15px;
    }

    /* Custom SweetAlert2 styles to match website theme */
    .custom-popup {
      border-radius: 16px !important;
      font-family: 'Nunito Sans', sans-serif !important;
    }

    .custom-title {
      background: linear-gradient(135deg, #dccdbd 0%, #dab17e 100%) !important;
      background-clip: text !important;
      -webkit-text-fill-color: transparent !important;
      font-weight: 700 !important;
    }

    .custom-content {
      color: #666 !important;
      font-family: 'Nunito Sans', sans-serif !important;
    }

    .custom-confirm-btn {
      background: linear-gradient(135deg, #dccdbd 0%, #dab17e 100%) !important;
      border: none !important;
      border-radius: 10px !important;
      font-family: 'Nunito Sans', sans-serif !important;
      font-weight: 600 !important;
      padding: 10px 25px !important;
      transition: all 0.3s ease !important;
    }

    .custom-confirm-btn:hover {
      transform: translateY(-2px) !important;
      box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
  </style>
</head>
<body>

  <div class="reset-container">
    <h2>Set New Password</h2>
    
    <!-- Server-side error message -->
    <% if (locals.message && message.length > 0) { %>
      <div class="error-message server-error"><%= message %></div>
    <% } %>

    <form id="resetForm" action="/reset-password" method="POST">
      <input type="password" name="password" id="password" placeholder="New Password" required>
      <div class="error-message" id="passwordError"></div>
      
      <input type="password" name="confirm_password" id="confirmPassword" placeholder="Confirm Password" required>
      <div class="error-message" id="confirmError"></div>
      
      <button type="submit" class="submit-btn">Reset Password</button>
    </form>
  </div>

  <script>
    const form = document.getElementById('resetForm');
    const passwordInput = document.getElementById('password');
    const confirmPasswordInput = document.getElementById('confirmPassword');
    const passwordError = document.getElementById('passwordError');
    const confirmError = document.getElementById('confirmError');

    // Password validation function
    function passwordValidateChecking() {
      const passval = passwordInput.value;
      const alpha = /[a-zA-Z]/;
      const digit = /\d/;
      
      if (passval.length < 8 || !alpha.test(passval) || !digit.test(passval)) {
        passwordError.style.display = "block";
        passwordError.innerHTML = "Password must be 8+ characters with letters and numbers";
        return false;
      } else {
        passwordError.style.display = "none";
        return true;
      }
    }

    // Confirm password validation function
    function confirmPasswordValidateChecking() {
      const passval = passwordInput.value;
      const confirmval = confirmPasswordInput.value;
      
      if (confirmval && passval !== confirmval) {
        confirmError.style.display = "block";
        confirmError.innerHTML = "Passwords do not match";
        return false;
      } else {
        confirmError.style.display = "none";
        return true;
      }
    }

    // Add event listeners for real-time validation
    passwordInput.addEventListener('blur', passwordValidateChecking);
    passwordInput.addEventListener('input', function() {
      // Clear confirm password error if password changes
      if (confirmPasswordInput.value) {
        confirmPasswordValidateChecking();
      }
    });
    
    confirmPasswordInput.addEventListener('blur', confirmPasswordValidateChecking);
    confirmPasswordInput.addEventListener('input', confirmPasswordValidateChecking);

   // Form submission validation
form.addEventListener('submit', async function(e) {
    e.preventDefault(); // Always prevent default
    
    const isPasswordValid = passwordValidateChecking();
    const isConfirmValid = confirmPasswordValidateChecking();
    
    if (!isPasswordValid || !isConfirmValid) {
        return;
    }
    
    try {
        const formData = new FormData(form);
        const response = await fetch('/reset-password', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                password: formData.get('password'),
                confirm_password: formData.get('confirm_password')
            })
        });
        
        const data = await response.json();
        
        if (data.success) {
            Swal.fire({
                title: 'Password Changed Successfully!',
                text: 'Your password has been updated successfully. You can now use your new password to login.',
                icon: 'success',
                confirmButtonText: 'Go to Login',
                confirmButtonColor: '#dab17e',
                allowOutsideClick: false,
                allowEscapeKey: false,
            }).then(() => {
                window.location.href = '/login';
            });
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({
            title: 'Error',
            text: 'Failed to reset password. Please try again.',
            icon: 'error',
            confirmButtonColor: '#dab17e'
        });
    }
});
    // Check for success parameter in URL and show success popup
    document.addEventListener('DOMContentLoaded', function() {
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get('success') === 'true') {
        showSuccessPopup();
      }
    });

   // Success popup function
function showSuccessPopup() {
    Swal.fire({
        title: 'Password Changed Successfully!',
        text: 'Your password has been updated successfully. You can now use your new password to login.',
        icon: 'success',
        confirmButtonText: 'Go to Login',
        confirmButtonColor: '#dab17e',
        background: '#fff',
        allowOutsideClick: false,
        allowEscapeKey: false,
        customClass: {
            popup: 'custom-popup',
            title: 'custom-title',
            content: 'custom-content',
            confirmButton: 'custom-confirm-btn'
        }
    }).then((result) => {
        if (result.isConfirmed) {
            // Clear the URL parameters and redirect to login
            window.history.replaceState({}, document.title, "/reset-password");
            window.location.href = '/login';
        }
    });
}
  </script>

</body>
</html>