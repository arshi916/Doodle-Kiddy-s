// Toggle Wishlist function
function toggleWishlist(button, productName) {
    button.classList.toggle('active');
    const icon = button.querySelector('i');
    
    if (button.classList.contains('active')) {
        icon.classList.remove('far');
        icon.classList.add('fas');
        console.log('Added to wishlist:', productName);
    } else {
        icon.classList.remove('fas');
        icon.classList.add('far');
        console.log('Removed from wishlist:', productName);
    }
}

// Open zoom function
function openZoom(imageSrc) {
    // Create modal for image zoom
    const modal = document.createElement('div');
    modal.style.cssText = `
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.8);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        cursor: pointer;
    `;
    
    const img = document.createElement('img');
    img.src = imageSrc;
    img.style.cssText = `
        max-width: 90%;
        max-height: 90%;
        object-fit: contain;
        border-radius: 10px;
    `;
    
    modal.appendChild(img);
    document.body.appendChild(modal);
    
    modal.onclick = () => document.body.removeChild(modal);
}

// Shop Collection button functionality
document.addEventListener('DOMContentLoaded', function() {
    const shopButtons = document.querySelectorAll('button:contains("Shop Collection"), button:contains("Shop Now")');
    shopButtons.forEach(button => {
        if (button.textContent.includes('Shop') && button.textContent.includes('Collection') || button.textContent.includes('Shop Now')) {
            button.onclick = () => window.location.href = '/shop';
        }
    });
    
    // More specific targeting for buttons
    const heroShopBtn = document.querySelector('.mt-6.bg-black');
    if (heroShopBtn && heroShopBtn.textContent.includes('Shop Collection')) {
        heroShopBtn.onclick = () => window.location.href = '/shop';
    }
});
</script>