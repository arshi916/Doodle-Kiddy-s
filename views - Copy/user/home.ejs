/* Full Width Banner Styles */
.ad-banner {
    position: relative;
    width: 100%;
    height: 500px;
    margin: 40px 0;
    border-radius: 15px;
    overflow: hidden;
    cursor: pointer;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
}

.banner-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.ad-banner:hover .banner-image {
    transform: scale(1.05);
}

.banner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
        135deg,
        rgba(0, 0, 0, 0.3) 0%,
        rgba(212, 184, 150, 0.4) 50%,
        rgba(184, 160, 130, 0.6) 100%
    );
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 40px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.6s ease;
}

.ad-banner:hover .banner-overlay {
    opacity: 1;
    visibility: visible;
    backdrop-filter: blur(3px);
}

.banner-title {
    font-size: 2.8rem;
    font-weight: bold;
    color: white;
    margin-bottom: 20px;
    text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
    transform: translateY(30px);
    opacity: 0;
    transition: all 0.6s ease 0.1s;
}

.ad-banner:hover .banner-title {
    transform: translateY(0);
    opacity: 1;
}

.banner-description {
    font-size: 1.4rem;
    color: white;
    line-height: 1.6;
    max-width: 600px;
    text-shadow: 1px 1px 8px rgba(0, 0, 0, 0.5);
    transform: translateY(30px);
    opacity: 0;
    transition: all 0.6s ease 0.2s;
    margin-bottom: 30px;
}

.ad-banner:hover .banner-description {
    transform: translateY(0);
    opacity: 1;
}

.banner-cta {
    background: #D4B896;
    color: white;
    padding: 15px 35px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    border: 2px solid transparent;
    transform: translateY(30px);
    opacity: 0;
    box-shadow: 0 4px 15px rgba(212, 184, 150, 0.3);
    transition: all 0.6s ease 0.3s;
}

.ad-banner:hover .banner-cta {
    transform: translateY(0);
    opacity: 1;
}

.banner-cta:hover {
    background: white;
    color: #D4B896;
    border-color: #D4B896;
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(212, 184, 150, 0.4);
    text-decoration: none;
}

.banner-decoration {
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 3rem;
    opacity: 0;
    transform: scale(0.5);
    animation: float 3s ease-in-out infinite;
    transition: all 0.6s ease 0.4s;
}

.banner-decoration:nth-child(2) {
    top: auto;
    bottom: 20px;
    left: 20px;
    animation-delay: 1.5s;
    transition-delay: 0.5s;
}

.ad-banner:hover .banner-decoration {
    opacity: 0.8;
    transform: scale(1);
}

@keyframes float {
    0%, 100% { transform: translateY(0px) scale(1); }
    50% { transform: translateY(-10px) scale(1); }
}

/* Products Section Styling */
.products-section {
    width: 100%;
    padding: 0 40px;
}

.section-header {
    text-align: center;
    margin-bottom: 40px;
}

.section-title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
    letter-spacing: 2px;
}

/* Products Grid - 4 per row */
.products-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 40px;
}

/* Product Card Styling */
.product-card {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    width: 100%;
}

.product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

/* Product Image Container */
.product-card > div:first-child {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1; /* Makes image container square */
}

.product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.product-card:hover .product-image {
    transform: scale(1.05);
}

/* Price and Discount Badges */
.price-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: #D4B896;
    color: white;
    padding: 5px 10px;
    border-radius: 15px;
    font-size: 0.85rem;
    font-weight: bold;
    z-index: 2;
}

.discount-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #e74c3c;
    color: white;
    padding: 5px 8px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: bold;
    z-index: 2;
}

/* Product Actions */
.product-actions {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    gap: 10px;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.product-card:hover .product-actions {
    opacity: 1;
}

.action-btn {
    background: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
}

.action-btn:hover {
    background: #fff;
    transform: scale(1.1);
}

.action-btn.wishlist.active {
    background: #e74c3c;
    color: white;
}

/* Product Info */
.product-info {
    padding: 20px;
}

.product-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    line-height: 1.3;
    min-height: 2.6rem; /* Ensures consistent height for titles */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.product-price {
    margin-bottom: 10px;
}

.current-price {
    font-size: 1.25rem;
    font-weight: bold;
    color: #e74c3c;
}

.old-price {
    font-size: 1rem;
    color: #999;
    text-decoration: line-through;
    margin-left: 8px;
}

/* Product Rating */
.product-rating {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 15px;
}

.stars {
    color: #ffc107;
    font-size: 1rem;
}

/* Add to Cart Button */
.add-to-cart {
    width: 100%;
    background: #D4B896;
    color: white;
    border: none;
    padding: 12px;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}

.add-to-cart:hover {
    background: #C8A882;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(212, 184, 150, 0.3);
}

/* View More Button - Updated to match theme */
.view-more-btn {
    display: inline-block;
    background: #D4B896;
    color: white;
    padding: 15px 30px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(212, 184, 150, 0.3);
}

.view-more-btn:hover {
    background: #C8A882;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(212, 184, 150, 0.4);
    text-decoration: none;
    color: white;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 60px 20px;
}

.empty-state-container {
    max-width: 400px;
    margin: 0 auto;
}

.empty-state-icon {
    font-size: 4rem;
    color: #ddd;
    margin-bottom: 20px;
}

.empty-state-title {
    font-size: 1.5rem;
    color: #666;
    margin-bottom: 10px;
}

.empty-state-description {
    color: #999;
    margin-bottom: 30px;
}

.browse-btn {
    background: #D4B896;
    color: white;
    padding: 12px 25px;
    border-radius: 20px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
}

.browse-btn:hover {
    background: #C8A882;
    transform: translateY(-2px);
    text-decoration: none;
    color: white;
}

/* Responsive Design */
@media (max-width: 1200px) {
    .products-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
    }
    
    .products-section {
        padding: 0 30px;
    }
}

@media (max-width: 768px) {
    .products-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
    }
    
    .section-title {
        font-size: 2rem;
    }
    
    .product-title {
