<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<title><%= typeof title !== 'undefined' ? title : 'Admin Error' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">

  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-md">
      <div class="p-6 text-2xl font-bold text-purple-600">AdminHub</div>
      <nav class="mt-6 space-y-2 text-gray-700">
        <a href="/admin" class="block py-2 px-4 rounded hover:bg-purple-100">Dashboard</a>
        <a href="#" class="block py-2 px-4 rounded hover:bg-purple-100">Products</a>
        <a href="#" class="block py-2 px-4 rounded hover:bg-purple-100">Orders</a>
        <a href="#" class="block py-2 px-4 rounded hover:bg-purple-100">Categories</a>
        <a href="#" class="block py-2 px-4 rounded hover:bg-purple-100">Coupons</a>
        <a href="#" class="block py-2 px-4 rounded hover:bg-purple-100">Wallet</a>
        <a href="#" class="block py-2 px-4 rounded hover:bg-purple-100">Settings</a>
        <a href="/admin/logout" class="block py-2 px-4 rounded text-red-600 hover:bg-red-100">Logout</a>
      </nav>
    </aside>

    <!-- Main content -->
    <div class="flex-1 flex flex-col">
      <!-- Top Navbar -->
      <header class="bg-white shadow-md px-6 py-4 flex justify-between items-center">
        <input
          type="text"
          placeholder="Search..."
          class="w-1/3 px-3 py-1 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring focus:border-purple-400"
        />
        <div class="flex items-center gap-4">
          <span class="text-gray-700 text-sm">Admin</span>
          <img
            src="https://i.pravatar.cc/36"
            alt="Profile"
            class="w-9 h-9 rounded-full"
          />
        </div>
      </header>

      <!-- Error Content -->
      <main class="flex-grow flex items-center justify-center px-4">
        <div class="bg-white rounded-lg shadow-md p-8 max-w-md text-center">
          <h1 class="text-3xl font-bold text-red-500 mb-4"><%= title || "Error Occurred" %></h1>
          <p class="text-gray-700 mb-6"><%= message || "Something went wrong on the admin panel." %></p>
          <a href="/admin" class="inline-block bg-purple-600 hover:bg-purple-700 text-white py-2 px-4 rounded-md">
            Go to Dashboard
          </a>
        </div>
      </main>
    </div>
  </div>

</body>
</html>
