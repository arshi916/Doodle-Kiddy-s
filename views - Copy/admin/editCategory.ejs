<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin - Edit Category</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body { 
      font-family: 'Inter', sans-serif; 
    }
    .glass-effect {
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.9);
    }
    .fade-in {
      animation: fadeIn 0.5s ease-in;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .error-input {
      border-color: #ef4444 !important;
      box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1) !important;
    }
    .success-input {
      border-color: #10b981 !important;
      box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1) !important;
    }
  </style>
</head>
<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">

  <!-- Main Content -->
  <div class="flex-1 flex flex-col">
    <!-- Header -->
    <header class="glass-effect shadow-lg border-b border-gray-200 px-6 py-4">
      <div class="flex items-center gap-4">
        <a href="/admin/categories" class="text-purple-600 hover:text-purple-700 transition-colors duration-200">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
          </svg>
        </a>
        <h1 class="text-2xl font-bold text-gray-800">Edit Category</h1>
        <div class="status-badge bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm font-medium">
          <div class="w-2 h-2 bg-blue-500 rounded-full animate-pulse inline-block mr-2"></div>
          Edit Mode
        </div>
      </div>
    </header>

    <!-- Main Form -->
    <main class="p-6 flex-1 flex items-start justify-center">
      <div class="w-full max-w-2xl">
        <div class="bg-white rounded-2xl shadow-xl border border-gray-200 fade-in">
          <!-- Form Header -->
          <div class="p-6 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white rounded-t-2xl">
            <div class="flex items-center gap-4">
              <div class="bg-gradient-to-r from-blue-500 to-blue-600 p-3 rounded-xl">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </div>
              <div>
                <h2 class="text-xl font-bold text-gray-800">Update Category Details</h2>
                <p class="text-sm text-gray-600">Modify the information below to update the category</p>
              </div>
            </div>
          </div>

          <!-- Form Content -->
          <div class="p-6">
            <form method="POST" action="/admin/categories/edit/<%= category._id %>" id="categoryForm" novalidate>
              <!-- Category Name -->
              <div class="mb-6">
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                  Category Name <span class="text-red-500">*</span>
                </label>
                <input 
                  type="text" 
                  name="name" 
                  id="categoryName"
                  value="<%= category.name %>"
                  required 
                  maxlength="50"
                  class="w-full border border-gray-300 px-4 py-3 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 shadow-sm"
                  placeholder="Enter category name (2-50 characters)"
                />
                <div class="mt-1 flex justify-between">
                  <span class="text-xs text-gray-500">Minimum 2 characters required</span>
                  <span class="text-xs text-gray-500"><span id="nameCount"><%= category.name.length %></span>/50</span>
                </div>
                <div id="nameError" class="text-red-500 text-xs mt-1 hidden"></div>
              </div>

              <!-- Description -->
              <div class="mb-6">
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                  Description
                </label>
                <textarea 
                  name="description" 
                  id="categoryDescription"
                  rows="4"
                  maxlength="500"
                  class="w-full border border-gray-300 px-4 py-3 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 shadow-sm resize-none"
                  placeholder="Enter category description (optional, max 500 characters)"
                ><%= category.description || '' %></textarea>
                <div class="mt-1 flex justify-between">
                  <span class="text-xs text-gray-500">Optional field</span>
                  <span class="text-xs text-gray-500"><span id="descCount"><%= (category.description || '').length %></span>/500</span>
                </div>
                <div id="descError" class="text-red-500 text-xs mt-1 hidden"></div>
              </div>

              <!-- Form Actions -->
              <div class="flex justify-between items-center pt-6 border-t border-gray-200">
                <a href="/admin/categories" class="inline-flex items-center gap-2 px-6 py-3 text-gray-600 hover:text-gray-700 hover:bg-gray-100 rounded-xl transition-all duration-200 font-medium">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                  </svg>
                  Back to Categories
                </a>
                
                <button 
                  type="submit" 
                  id="submitBtn"
                  class="inline-flex items-center gap-2 px-8 py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-xl hover:from-blue-600 hover:to-blue-700 transition-all duration-200 font-medium shadow-lg hover:shadow-xl transform hover:scale-105 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span id="submitText">Update Category</span>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
  </div>

<script>
// Real-time validation and character counting
document.getElementById('categoryName').addEventListener('input', function() {
  const count = this.value.length;
  const trimmedValue = this.value.trim();
  document.getElementById('nameCount').textContent = count;
  
  // Clear previous states
  this.classList.remove('error-input', 'success-input');
  const errorDiv = document.getElementById('nameError');
  errorDiv.classList.add('hidden');
  
  // Validation
  if (count === 0) {
    // Empty field - error state for required field
    errorDiv.textContent = 'Category name is required';
    errorDiv.classList.remove('hidden');
    this.classList.add('error-input');
    return;
  }
  
  if (trimmedValue.length < 2) {
    errorDiv.textContent = 'Category name must be at least 2 characters long';
    errorDiv.classList.remove('hidden');
    this.classList.add('error-input');
  } else if (count > 50) {
    errorDiv.textContent = 'Category name cannot exceed 50 characters';
    errorDiv.classList.remove('hidden');
    this.classList.add('error-input');
  } else {
    // Valid input
    this.classList.add('success-input');
  }
});

document.getElementById('categoryDescription').addEventListener('input', function() {
  const count = this.value.length;
  document.getElementById('descCount').textContent = count;
  
  // Clear previous states
  this.classList.remove('error-input', 'success-input');
  const errorDiv = document.getElementById('descError');
  errorDiv.classList.add('hidden');
  
  if (count > 500) {
    errorDiv.textContent = 'Description cannot exceed 500 characters';
    errorDiv.classList.remove('hidden');
    this.classList.add('error-input');
  } else if (count > 0) {
    this.classList.add('success-input');
  }
});

// Enhanced form validation
function validateForm() {
  const name = document.getElementById('categoryName').value.trim();
  const description = document.getElementById('categoryDescription').value.trim();
  let isValid = true;
  
  // Clear all previous errors
  document.getElementById('nameError').classList.add('hidden');
  document.getElementById('descError').classList.add('hidden');
  document.getElementById('categoryName').classList.remove('error-input');
  document.getElementById('categoryDescription').classList.remove('error-input');
  
  // Validate name
  if (!name) {
    document.getElementById('nameError').textContent = 'Category name is required';
    document.getElementById('nameError').classList.remove('hidden');
    document.getElementById('categoryName').classList.add('error-input');
    isValid = false;
  } else if (name.length < 2) {
    document.getElementById('nameError').textContent = 'Category name must be at least 2 characters long';
    document.getElementById('nameError').classList.remove('hidden');
    document.getElementById('categoryName').classList.add('error-input');
    isValid = false;
  } else if (name.length > 50) {
    document.getElementById('nameError').textContent = 'Category name cannot exceed 50 characters';
    document.getElementById('nameError').classList.remove('hidden');
    document.getElementById('categoryName').classList.add('error-input');
    isValid = false;
  }
  
  // Validate description
  if (description.length > 500) {
    document.getElementById('descError').textContent = 'Description cannot exceed 500 characters';
    document.getElementById('descError').classList.remove('hidden');
    document.getElementById('categoryDescription').classList.add('error-input');
    isValid = false;
  }
  
  return isValid;
}

// Form submission handling
document.getElementById('categoryForm').addEventListener('submit', async function(e) {
  e.preventDefault(); // Always prevent default to handle validation
  
  const submitBtn = document.getElementById('submitBtn');
  const submitText = document.getElementById('submitText');
  const originalHTML = submitBtn.innerHTML;
  
  // Validate form
  if (!validateForm()) {
    // Show validation error
    await Swal.fire({
      title: 'Validation Error!',
      text: 'Please fill in all required fields correctly.',
      icon: 'error',
      confirmButtonColor: '#dc2626',
      confirmButtonText: 'OK',
      background: '#ffffff',
      customClass: {
        popup: 'rounded-2xl shadow-2xl',
        title: 'text-gray-800 font-semibold',
        content: 'text-gray-600',
        confirmButton: 'rounded-xl px-6 py-3 font-medium'
      }
    });
    return;
  }
  
  // Show loading state
  submitBtn.disabled = true;
  submitBtn.innerHTML = `
    <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
    </svg>
    Updating Category...
  `;
  
  // Submit the form
  try {
    this.submit();
  } catch (error) {
    // Restore button state on error
    submitBtn.disabled = false;
    submitBtn.innerHTML = originalHTML;
    
    await Swal.fire({
      title: 'Error!',
      text: 'Something went wrong. Please try again.',
      icon: 'error',
      confirmButtonColor: '#dc2626',
      confirmButtonText: 'OK',
      background: '#ffffff',
      customClass: {
        popup: 'rounded-2xl shadow-2xl',
        title: 'text-gray-800 font-semibold',
        content: 'text-gray-600',
        confirmButton: 'rounded-xl px-6 py-3 font-medium'
      }
    });
  }
});

// Check for error messages from server
document.addEventListener('DOMContentLoaded', function() {
  const errorMessage = '<%= typeof errorMessage !== "undefined" ? errorMessage : "" %>';
  
  if (errorMessage) {
    Swal.fire({
      title: 'Error!',
      text: errorMessage,
      icon: 'error',
      confirmButtonColor: '#dc2626',
      confirmButtonText: 'OK',
      background: '#ffffff',
      customClass: {
        popup: 'rounded-2xl shadow-2xl',
        title: 'text-gray-800 font-semibold',
        content: 'text-gray-600',
        confirmButton: 'rounded-xl px-6 py-3 font-medium'
      }
    });
  }
  
  // Initialize input states based on current values
  const nameInput = document.getElementById('categoryName');
  const descInput = document.getElementById('categoryDescription');
  
  // Trigger validation for name field if it has value
  if (nameInput.value.trim()) {
    nameInput.dispatchEvent(new Event('input'));
  }
  
  // Trigger validation for description field if it has value
  if (descInput.value.trim()) {
    descInput.dispatchEvent(new Event('input'));
  }
});

// Prevent form resubmission on page refresh
if (window.history.replaceState) {
  window.history.replaceState(null, null, window.location.href);
}
</script>

</body>
</html>